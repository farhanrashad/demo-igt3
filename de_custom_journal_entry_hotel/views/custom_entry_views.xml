<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_custom_entry_form_view_inherit_hotel" model="ir.ui.view">
            <field name="name">account.custom.entry.form.view.inehrit.hotel</field>
            <field name="model">account.custom.entry</field>
            <field name="inherit_id" ref="de_custom_journal_entry.account_custom_entry_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//sheet[1]" position="inside">
                    <field name="has_hotel" invisible="1"/>
                </xpath>
                <xpath expr="//sheet[1]/group[1]" position="after">
                    <!-- accomodation header fields -->
                    <group col="4" attrs="{'invisible':[('has_hotel','==','no')]}">
                        <field name="customer_type" attrs="{'invisible':[('has_hotel','==','no')], 'required': [('has_hotel','==','required')], 'readonly':[('stage_category','!=', 'draft')]}" />
                        <field name="date_effective" attrs="{'invisible':[('has_hotel','==','no')], 'required': [('has_hotel','==','required')], 'readonly':[('stage_category','!=', 'draft')]}" />
                        <field name="date_subscription" attrs="{'invisible':[('has_hotel','==','no')], 'required': [('has_hotel','==','required')], 'readonly':[('stage_category','!=', 'draft')]}" />
                    </group>
                </xpath>
                <xpath expr="//page[@name='custom_entry_line']/field[@name='custom_entry_line']/tree[1]" position="inside">
                    <!-- Accomodation -->
                    <field name="h_category" string="Category" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/>
                    <field name="hotel_detail" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/>
                    <field name="h_check_in" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/>
                    <field name="h_check_out" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/>
                    <field name="h_number_of_nights" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/>
                    <field name="h_travel_id" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/>
                    <field name="h_unit_price" string="Unit Price" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/>
                    <field name="h_extra_charges" string="Extra Charges" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/>
                    <field name="h_amount" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/> 
                </xpath>
                
            </field>
    </record>
</odoo>