<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="tpo_up_request_line_pivot" model="ir.ui.view">
            <field name="name">topup.request.line.pivot</field>
            <field name="model">topup.request.line</field>
            <field name="arch" type="xml">
                <pivot string="Top Up Pivot Count">
                    <field name="telenor"/>
                    <field name='ooredoo'/>
                    <field name='mpt'/>
                    <field name='mytel'/>
                    <field name='total'/>
                </pivot>
            </field>
        </record>

        <record id="top_up_request_line_graph" model="ir.ui.view">
            <field name="name">topup.request.line.graph</field>
            <field name="model">topup.request.line</field>
            <field name="arch" type="xml">
                <graph string="Top Up Request Graph" type="bar">
                    <field name="telenor"/>
                    <field name='ooredoo'/>
                    <field name='mpt'/>
                    <field name='mytel'/>
                    <field name='total'/>
                </graph>
            </field>
        </record>

        <record id="view_topup_request_line_reporting" model="ir.actions.act_window">
            <field name="name">Reporting Request</field>
            <field name="res_model">topup.request.line</field>
            <field name="view_mode">pivot,graph</field>
            <field name="domain">[]</field>
        </record>

        <menuitem id="request_topup_reporting_3" name="Reporting Requests" parent="topup_reporting"
                  action="view_topup_request_line_reporting"
                  sequence="8"/>

    </data>
</odoo>
