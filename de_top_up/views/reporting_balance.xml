<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="tpo_up_balance_line_pivot" model="ir.ui.view">
            <field name="name">topup.balance.line.pivot</field>
            <field name="model">topup.balance.line</field>
            <field name="arch" type="xml">
                <pivot string="Top Up Pivot Count">
                    <field name="opening_balance"/>
                    <field name="purchase_qty"/>
                    <field name="distributed_qty"/>
                    <field name="balance"/>
                </pivot>
            </field>
        </record>

        <record id="top_up_balance_line_graph" model="ir.ui.view">
            <field name="name">topup.balance.line.graph</field>
            <field name="model">topup.balance.line</field>
            <field name="arch" type="xml">
                <graph string="Top Up Balance Graph" type="bar">
                    <field name="opening_balance"/>
                    <field name="purchase_qty"/>
                    <field name="distributed_qty"/>
                </graph>
            </field>
        </record>

        <record id="view_topup_balance_line_reporting" model="ir.actions.act_window">
            <field name="name">Reporting balance</field>
            <field name="res_model">topup.balance.line</field>
            <field name="view_mode">pivot,graph</field>
            <field name="domain">[]</field>
        </record>

        <menuitem id="balance_topup_reporting_2" name="Reporting Balance" parent="topup_reporting"
                  action="view_topup_balance_line_reporting"
                  sequence="3"/>

    </data>


</odoo>
