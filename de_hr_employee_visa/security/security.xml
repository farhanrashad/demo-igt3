<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
        <record id="ir_category_hr_employee_visa" model="ir.module.category">
            <field name="name">Employee Visa</field>
        <field name="description">Helps you manage your employees visa.</field>
            
        <field name="sequence">99</field>
    </record>

		<record id="group_employee_visa_user" model="res.groups">
		    <field name="name">User</field>
		    <field name="category_id" ref="ir_category_hr_employee_visa"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">The user will be able to create document.</field>
		</record>

		<record id="group_employee_visa_manager" model="res.groups">
		    <field name="name">Manager</field>
		    <field name="category_id" ref="ir_category_hr_employee_visa"/>
    		<field name="implied_ids" eval="[(4, ref('group_employee_visa_user'))]"/>
    		<field name="comment">The user will be able to approve document created by user.</field>
		</record>
	</data>
</odoo>
