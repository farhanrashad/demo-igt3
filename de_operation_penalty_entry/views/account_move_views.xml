<?xml version="1.0"?>
<odoo>

    <record id="view_move_form_inherit_penalty_entry" model="ir.ui.view">
        <field name="name">view.move.form.inherit.penalty.entry</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="penalty_entry_id" invisible="1" />
            </field>
            <xpath expr="//field[@name='invoice_line_ids']/tree" position="inside">
                <field name="penalty_entry_line_id" invisible="1" />
                <field name="penalty_entry_id" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree" position="inside">
                <field name="penalty_entry_line_id" invisible="1" />
                <field name="penalty_entry_id" invisible="1" />
            </xpath>
        </field>
    </record>

</odoo>
