        <record id="email_template_edi_sessions_case" model="mail.template">
            <field name="name">Session</field>
            <field name="model_id" ref="openhcm_employee_training.model_hr_employee_training_session"/>
            <field name="auto_delete" eval="False"/>
            <field name="email_from">${ctx['email_from']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="subject">Session</field>
            <field name="lang">${ctx['lang']}</field>
            <field name="body_html">
                <![CDATA[
                        <div>
                            <p>
                                Dear Participant,
                                <br /><br />
                                Here is your session <strong>ref# ${ctx['ref']}</strong> <br />
                                from ${ctx['date_from']} to ${ctx['date_to']} <br />
                                at location <strong>${ctx['location']}</strong>
                            </p>
                        </div>
                        ]]>
            </field>
        </record>
    </data>
