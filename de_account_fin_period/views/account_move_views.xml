<?xml version="1.0"?>
<odoo>
    <!-- display periods in tree view -->
    <record id="view_move_tree_inherit_period" model="ir.ui.view">
        <field name="name">view.move.tree.inehrit.period</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="account_period" string="Period" optional="show"/>
            </field>
        </field>
    </record>
    
    <record id="view_in_invoice_tree_inherit_period" model="ir.ui.view">
        <field name="name">view.in.invoice.tree.inehrit.period</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="invoice_date" position="after">
                <field name="account_period" string="Period" optional="show"/>
            </field>
        </field>
    </record>
    
    <record id="view_out_invoice_tree_inherit_period" model="ir.ui.view">
        <field name="name">view.out.invoice.tree.inehrit.period</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="invoice_date" position="after">
                <field name="account_period" string="Period" optional="show"/>
            </field>
        </field>
    </record>
    
    <!-- display periods in form views -->
    <record id="view_move_form_inherit_account_period" model="ir.ui.view">
        <field name="name">view.move.form.inherit.account.period</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="invoice_date" position="after">
                <field name="account_period" string="Period" attrs="{'invisible':[('move_type','in',['entry'])]}"/>
            </field>
            <xpath expr="//group[1]/group[2]" position="inside">
                <field name="account_period" string="Period" attrs="{'invisible':[('move_type','not in',['entry'])]}"/>
            </xpath>
        </field>
    </record>
    
    <!-- display periods in line views -->
    <record id="view_move_line_tree_inherit_period" model="ir.ui.view">
        <field name="name">view.move.line.tree.inehrit.period</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="account_period" string="Period" optional="show" />
            </field>
        </field>
    </record>
    
    <record id="view_move_line_tree_grouped_general_inherit_period" model="ir.ui.view">
        <field name="name">view.move.line.tree.grouped.general.inehrit.period</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped_general"/>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="account_period" string="Period" optional="show" />
            </field>
        </field>
    </record>
    
    <record id="view_move_line_tree_grouped_sales_purchases_inherit_period" model="ir.ui.view">
        <field name="name">view.move.line.tree.grouped.sales.purchases.inehrit.period</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped_sales_purchases"/>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="account_period" string="Period" optional="hide" />
            </field>
        </field>
    </record>
    
    <record id="view_move_line_tree_grouped_bank_cash_inherit_period" model="ir.ui.view">
        <field name="name">view.move.line.tree.grouped.bank.cash.inehrit.period</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped_bank_cash"/>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="account_period" string="Period" optional="hide" />
            </field>
        </field>
    </record>
    
    <record id="view_move_line_tree_grouped_misc_inherit_period" model="ir.ui.view">
        <field name="name">view.move.line.tree.grouped.misc.inehrit.period</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped_misc"/>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="account_period" string="Period" optional="hide" />
            </field>
        </field>
    </record>
    
    

</odoo>
