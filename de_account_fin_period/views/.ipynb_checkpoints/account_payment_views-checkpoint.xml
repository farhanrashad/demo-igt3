<?xml version="1.0"?>
<odoo>
    <!-- display periods in tree view -->
    
    <record id="view_account_payment_tree_inherit_period" model="ir.ui.view">
        <field name="name">view.account.payment.tree.inehrit.period</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="account_period" string="Period" optional="show"/>
            </field>
        </field>
    </record>
    
    <!-- display periods in form views -->
    <record id="view_account_payment_form_inherit_account_period" model="ir.ui.view">
        <field name="name">view.account.payment.form.inherit.account.period</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]/group[2]" position="inside">
                <field name="account_period" string="Period" />
            </xpath>
        </field>
    </record>
    
   

</odoo>
