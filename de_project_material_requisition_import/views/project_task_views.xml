<odoo>
    <data>
        
        <record id="view_project_task_requisition_import" model="ir.ui.view">
            <field name="name">project.task.requisition.import</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="replace">
                    <field name="user_id" class="o_task_user_field" />
                </xpath>
                <xpath expr="//header" position="inside">
                        <button name="action_material_import" string="Material Requisition" type="object" class="oe_highlight" attrs="{'invisible':['|',('is_attachment','=', False),('is_processed','=',True)]}" />

                </xpath>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="transfer_category_id" invisible="1" />
                    <field name="attachment_id"  widget="many2many_binary" attrs="{'invisible':[('is_attachment','!=',True)]}"></field>
                    <field name="fir_attachment_id"  widget="many2many_binary" attrs="{'invisible':[('is_attachment','!=',True)]}"></field>
                    <field name="is_processed"  invisible="1"/>

                    <field name="is_requisition"  invisible="1"/>
                    <field name="is_fir"  invisible="1"/>
                    <field name="is_check_form"  invisible="1"/>
                    <field name="is_checklist"  invisible="1"/>
                    <field name="is_accidnent"  invisible="1"/>
                    <field name="is_expiry"  invisible="1"/>

                    <field name="is_attachment"  invisible="1"/>
                    <field name="un_processed"  invisible="1" />
                </xpath>

                 <xpath expr="//field[@name='user_id']" position="after">
                    <field name="expiry_attachment_id"  widget="many2many_binary" attrs="{'invisible':[('is_attachment','!=',True)]}"></field>
                    <field name="check_attachment_id"  widget="many2many_binary" attrs="{'invisible':[('is_attachment','!=',True)]}"></field>
                    <field name="accident_attachment_id"  widget="many2many_binary" attrs="{'invisible':[('is_attachment','!=',True)]}"></field>
                     <field name="checklist_attachment_id"  widget="many2many_binary" attrs="{'invisible':[('is_attachment','!=',True)]}"></field>

                 </xpath>


              
           </field>
        </record>


         <record id="action_view_un_processed_task" model="ir.actions.act_window">
            <field name="name">Un-Processed Tasks</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
            <field name="domain">[('un_processed', '=', 1)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No tasks found. Let's create one!
                </p><p>
                     To get things done, use activities and status on tasks.<br/>
                    Chat in real time or by email to collaborate efficiently.
                </p>
            </field>
        </record>

         <record id="action_view_processed_task" model="ir.actions.act_window">
            <field name="name">Processed Tasks</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
            <field name="domain">[('is_processed', '=', 1)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No tasks found. Let's create one!
                </p><p>
                     To get things done, use activities and status on tasks.<br/>
                    Chat in real time or by email to collaborate efficiently.
                </p>
            </field>
        </record>



         <menuitem name="Un-Process Tasks" id="menu_un_processed" parent="de_stock_material_transfer.stock_requisition_config_menu"
            action="action_view_un_processed_task" sequence="2" />

         <menuitem name="Processed Tasks" id="menu_processed" parent="de_stock_material_transfer.stock_requisition_config_menu"
            action="action_view_processed_task" sequence="2" />


       
    </data>
</odoo>