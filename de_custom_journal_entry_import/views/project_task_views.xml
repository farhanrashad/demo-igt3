<odoo>
    <data>
        
        <record id="view_project_task_custom_entry_import" model="ir.ui.view">
            <field name="name">project.task.custom.entry.import</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="replace">
                    <field name="user_id" class="o_task_user_field" />
                </xpath>
                 <xpath expr="//field[@name='project_id']" position="replace">
                    <field name="project_id"  domain="[('active', '=', True), ('company_id', '=', company_id)]"   required="0"   />
                </xpath>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="entry_partner_id"   attrs="{'invisible':[('is_entry_attachment','!=',True)]}"/>
                    <field name="custom_entry_type_id"   attrs="{'invisible':[('is_entry_attachment','!=',True)]}"/>
                    <field name="entry_attachment_id"  widget="many2many_binary" attrs="{'invisible':[('is_entry_attachment','!=',True)]}"></field>
                    <field name="custom_entry_id"  invisible="1"/>
                    <field name="is_entry_processed"  invisible="1"/>
                    <field name="is_entry_attachment"  invisible="1"/>
                    <field name="un_processed_entry"  invisible="1" />
                </xpath>
              
           </field>
        </record>


         <record id="action_view_un_processed_entry_task" model="ir.actions.act_window">
            <field name="name">Un-Processed Tasks</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
            <field name="domain">[('un_processed_entry', '=', 1)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No tasks found. Let's create one!
                </p><p>
                     To get things done, use activities and status on tasks.<br/>
                    Chat in real time or by email to collaborate efficiently.
                </p>
            </field>
        </record>

         <record id="action_view_processed_entry_task" model="ir.actions.act_window">
            <field name="name">Processed Tasks</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
            <field name="domain">[('is_entry_processed', '=', 1)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No tasks found. Let's create one!
                </p><p>
                     To get things done, use activities and status on tasks.<br/>
                    Chat in real time or by email to collaborate efficiently.
                </p>
            </field>
        </record>



         <menuitem name="Un-Process Tasks" id="menu_custom_un_processed" parent="de_custom_journal_entry.custom_entry_config_menu"
            action="action_view_un_processed_entry_task" sequence="2" />

         <menuitem name="Processed Tasks" id="menu_custom_processed" parent="de_custom_journal_entry.custom_entry_config_menu"
            action="action_view_processed_entry_task" sequence="2" />


       
    </data>
</odoo>