<odoo>
    <data>
        <record id="view_picking_form_inherit_milestone" model="ir.ui.view">
            <field name="name">view.picking.form.inherit.milestone</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="purchase_id" invisible="1"/>
                    <field name="allow_picking" invisible="1"/>
                    <field name="task_id" attrs="{'invisible':[('allow_picking','=',False)],'required':[('allow_picking','!=',False)]}" options="{'no_create':True,'no_open':True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>