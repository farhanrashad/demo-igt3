<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_inherit_requisition" model="ir.ui.view">
        <field name="name">view.picking.form.requistion</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='operations']/field[@name='move_ids_without_package']/tree[1]" position="inside">
                <field name="requisition_line_id" invisible="1"/>
                <field name="purchase_line_id" invisible="1"/>
                <field name="requisition_line_no" attrs="{'invisible':[('purchase_line_id','=',False)]}"/>
            </xpath>
        </field>
      </record>
    
    
</odoo>