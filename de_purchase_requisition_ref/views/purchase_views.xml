<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_inherit_requisition" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.requisition</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
              <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='products']/field[@name='order_line']/tree[1]" position="inside">
                <field name="requisition_line_id" invisible="1"/>
                <field name="requisition_line_no" optional="show"/>
            </xpath>
        </field>
      </record>
    
    
</odoo>