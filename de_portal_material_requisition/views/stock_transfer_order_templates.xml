<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="portal_layout_stock_transfer" name="Portal layout: Stock Order menu entry" inherit_id="portal.portal_breadcrumbs" priority="25">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'transfer' or transfer" class="col-lg-2" t-attf-class="breadcrumb-item #{'active ' if not transfer else ''}">
                <a t-if="transfer" t-attf-href="/transfer/orders?{{ keep_query() }}">Material Requisition</a>
                <t t-else="">Material Requisition</t>
            </li>
            <li t-if="transfer" class="breadcrumb-item active text-truncate col-8 col-lg-10">
                <t t-esc="transfer.name"/>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home_transfer" name="transfer Order" customize_show="True" inherit_id="portal.portal_my_home" priority="25">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Material Requisition</t>
                <t t-set="url" t-value="'/transfer/orders'"/>
                <t t-set="placeholder_count" t-value="'transfer_count'"/>
            </t>
        </xpath>  
    </template>

    <template id="portal_my_purchase_transfers" name="transfer Order">
         <t t-set="foo" t-value="2 + 1"/>
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Purchase Agreements</t>
            </t>
            <t t-if="not grouped_transfer">
                <div class="alert alert-warning mt8" role="alert">
                    There are no Material Requisition.
                </div>
            </t>
            <t t-if="grouped_transfer">
                <t t-call="portal.portal_table">
                    <t t-foreach="grouped_transfer" t-as="transfers">
                        <thead>
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th class="text-left">No#</th>
                                <th class="text-left">Reference</th>
                                <th class="text-left">Order Date</th>
                                <th class="text-left">Date Schedule</th>
                                <th class="text-left">Status</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="transfers" t-as="material">
                                <t t-if="material.user_id.id==uid" >
                                <tr>
                                    <td class="text-left">
                                          <a t-attf-href="/transfer/order/#{material.id}?{{ keep_query() }}">#<span t-field="material.id"/></a>
                                    </td>
                                     <td>
                                        <a t-attf-href="/transfer/order/#{material.id}?{{ keep_query() }}"><span t-field="material.name"/></a>
                                    </td>
                                     <td class="text-left">
                                        <span t-esc="material.date_order" />
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="material.date_scheduled" />
                                    </td>

                                    <td class="text-left">
                                        <span t-esc="material.stage_id.name" />
                                    </td>

                                </tr>
                               </t>
                            </t>
                            <tr>

                            </tr>   
                        </tbody>
                    </t>
                </t>
            </t>   
        </t>
    </template>
    
    <template id="portal_my_transfer" name="My transfer">
        <t t-call="portal.portal_layout">
             <t t-set="o_portal_fullwidth_alert" >
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#model=stock.transfer.order&amp;id=%s&amp;view_type=form' % (transfer.id)"/>
                </t> 
            </t>
          
            <div id="optional_placeholder"></div>
            <t t-call="portal.portal_record_layout">
                <t t-set="card_header">
                    <div id="optional_placeholder"></div>
                    <div class="container">
                      <div class="card">
                        <div class="card-header">
                                <div class="row">
                                    <div class="col-lg-11">
                                        <h5 class="d-flex mb-1 mb-md-0 row">
                                            <span t-field="transfer.user_id.partner_id.name" class="col-8 text-truncate"/>
                                            <small class="text-muted d-none d-md-inline"> (#<span t-field="transfer.id"/>)</small>
                                            <div class="col-3 col-md-3 text-left">
                                              <small class="text-right">State:</small>

                                                    <span t-field="transfer.state" class=" badge badge-pill badge-info" title="Current stage of this transfer Order"/>

                                            </div>
                                        </h5>
                                    </div>
                                    <t t-set="prev_record" t-value="1" /> 
                                    <t t-set="next_record" t-value="2" /> 
                                    <div style="float:right; text-align:right; width:0ox; margin-right:0px;" class=" btn-group col-lg-1" role="group">
                                    <h5>  
                                        <t t-if="pre_id">
                                            <a role="button"  t-attf-href="/transfer/order/pre/#{transfer.id}?" ><i style="margin-right:10px; align:right" class="fa fa-chevron-left" role="img" aria-label="Previous" title="Previous"></i></a>
                                        </t>
                                        <t t-else="">
                                            <a role="button"  t-att-class="disabled"  ><i style="margin-right:10px; align:right; color:#B8B7B0" class="fa fa-chevron-left" aria-label="Previous" title="Previous"></i></a>

                                        </t>
                                        <t t-if="next_id">
                                            <a role="button" t-attf-href="/transfer/order/next/#{transfer.id}?" ><i class="fa fa-chevron-right" role="img" aria-label="Next" title="Next"></i></a>
                                        </t>
                                        <t t-else="">
                                            <a role="button"  t-att-class="disabled"  ><i style="color:#B8B7B0" class="fa fa-chevron-right" aria-label="Next" title="Next"></i></a>
                                        </t>
                                    </h5>
                                </div>
                            </div>
                          </div>
                        </div>
                    </div>
                </t>
               <t t-set="card_body">          
                    <div class="row mb-5">
                        <div class="col-12 col-md-6 mb-1">
                            <span t-field="transfer.name" />
                        </div>
                        <div class="col-12 col-md-6" t-if="transfer.id">
                            <strong>Contractor:</strong> <span t-field="transfer.partner_id.name" />
                        </div>
                    </div>
                     <div class="row mb-12">
                         <div class="col-12 col-md-12 pb-2">
                            <div class="row">
                                <div class="col-md-5"> <strong>Transfer Type : </strong>
                                    <t t-if="transfer.transfer_order_type_id">
                                        <span t-esc="transfer.transfer_order_type_id.name"/>
                                    </t>
                                </div>
                                <div class="col-md-5"> <strong>Date Order : </strong>
                                    <t t-if="transfer.date_order">
                                        <span t-esc="transfer.date_order"/>
                                    </t>
                                </div>
                                <div class="col-md-5"> <strong>Scheduled Date : </strong>
                                    <t t-if="transfer.date_scheduled">
                                        <span t-esc="transfer.date_scheduled"/>
                                    </t>
                                </div>
                            </div>
                             <div class="row"> 
                                <table class="table-striped table">
                                <thead style="font-size:12px;">
                                    <tr>
                                        <h4>
                                            <b>
                                        <th class="text-left">Product</th>
                                        <th class="text-left">Project</th>
                                        <th class="text-left">Demand Quantity</th>
                                        <th class="text-left">Delivered Qty</th>
                                        <th class="text-left">UOM</th>
                                        <th class="text-left">From</th>
                                        <th class="text-left">To</th>
                                        <th class="text-left">Status</th>
                                            </b>
                                        </h4>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="transfer.stock_transfer_order_line" t-as="transfer_line">


                                        <tr>
                                            <td><span t-esc="transfer_line.product_id.name"/></td>
                                            <td><span t-esc="transfer_line.project_id.name"/></td>
                                            <td><span t-esc="transfer_line.product_uom_qty"/></td>
                                            <td><span t-esc="transfer_line.delivered_qty"/></td>
                                            <td><span t-esc="transfer_line.product_uom.name"/></td>
                                            <td><span t-esc="transfer_line.location_src_id.name"/></td>
                                            <td><span t-esc="transfer_line.location_dest_id.name"/></td>
                                            <td><span t-esc="transfer_line.delivery_status"/></td>
                                        </tr>

                                    </t>
                                </tbody>
                            </table>   
                                 
                                
                            </div>
                        </div>
                       
                    </div> 
                   
                  
                        
                    <div class="row"> 
                        <div t-attf-class="col-12 col-lg-12  mb-md-0 ">
                            <hr class="mb-1"/>
                            <div class="d-flex my-2">
                                <strong>Document</strong>
                            </div>
                            <t t-if="transfer.name">
                                <div class="py-1 px-2 bg-100 small" t-field="transfer.name"/>
                            </t>
                        </div> 
                    </div>

                </t> 
            </t>
            <div class="mt32">
                <h4><strong>Message and communication history</strong></h4>
                <t t-call="portal.message_thread">
                    <t t-set="object" t-value="transfer"/>
                    <t t-set="pid" t-value="pid"/>
                    <t t-set="hash" t-value="hash"/>
                </t>
            </div>
        </t>
    </template>
    
    
    
    
    
    

     <template id="create_payslip" name="My Create">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <t t-call="portal.portal_table">
                    <thead>
                        <tr>
                            <th class="text-left">Now you can also create new Payslips from here. Good Luck</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>  
                                <div class="container">
                                        <div class="row">
                                            <div class="col-md-8 col-xs-12 col-md-offset-2 sell-page-contact">
                                                <form id="saleForm" data-toggle="validator" action="/transfer/order/save" class="mt32">
                                                    <div class="form-group row form-field o_website_form_custom o_website_form_required_custom">
                                                        <div  class="col-xl">
                                                                <strong class="d-block mb-2">Payslip Name:</strong>
                                                                <input name="payslip_name" type="text" class="form-control o_website_form_input"/>
                                                        </div>
                                                        <div style="float:right;"  class="col-xl">
                                                                <strong class="d-block mb-2">Reference:</strong>
                                                            <input name="payslip_number" type="text" class="form-control o_website_form_input"/>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row form-field o_website_form_custom o_website_form_required_custom">
                                                        <div  class="col-xl">
                                                                <strong class="d-block mb-2">Date start:</strong>
                                                                <input name="date_start" type="date" required="required" class="form-control o_website_form_input"/>
                                                        </div>
                                                        <div style="float:right;"  class="col-xl">
                                                                <strong class="d-block mb-2">Date End:</strong>
                                                            <input name="date_end" type="date" required="required" class="form-control o_website_form_input"/>
                                                        </div>
                                                    </div>
                                        <div class="form-group row form-field o_website_form_custom o_website_form_required_custom">
                                                        <div  class="col-xl">
                                                          <label for="environment">Employee:</label>
                                                              <select class="form-control" name="payslip_emp_id">
                                                                    <t t-foreach="emps" t-as="emp">
                                                                        <option t-att-value="emp.id">
                                                                            <t t-esc="emp.name"/>
                                                                        </option>
                                                                    </t>
                                                            </select>
                                                    </div>
                                                     <div style="float:right;"  class="col-xl">
                                                          <label for="environment">Structure:</label>
                                                              <select class="form-control" name="payslip_structure_id">
                                                                    <t t-foreach="structure" t-as="struct">
                                                                        <option t-att-value="struct.id">
                                                                            <t t-esc="struct.name"/>
                                                                        </option>
                                                                    </t>
                                                            </select>
                                                    </div>
                                        </div>
                                                    <div class="form-group row form-field o_website_form_custom o_website_form_required_custom">
                                                        <div class="col-md-2">
                                                            <button type="submit"  class="btn btn-primary pull-left">Save</button>
                                                        </div>
                                                        <div class="col-md-7">
                                                            <t t-if="success_flag" t-call="portal.portal_docs_entry">
                                                                <t t-set="title" style="color:green">Approval has been Saved Success fully</t>
                                                            </t>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <a href="/transfer/orders"><div class="btn btn-warning pull-right" style="float:right; height:35px;line-height:100%;">Back To All Order</div></a>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </t>
                </t>
        </template> 

</odoo>



