<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="1">
        <record id="module_category_operations_penalties" model="ir.module.category">
        <field name="name">Operations Penalties</field>
        <field name="description">Helps you manage material internal requisitions</field>
        <field name="sequence">3</field>
    </record>
        
        <record id="group_operations_penalty_user" model="res.groups">
            <field name="name">Penalty User</field>
            <field name="category_id" ref="module_category_operations_penalties"/>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        
        <record id="group_operations_penalty_manager" model="res.groups">
            <field name="name">Penalty Manager</field>
            <field name="category_id" ref="module_category_operations_penalties"/>
            <field name="implied_ids" eval="[(4, ref('group_operations_penalty_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    
</data>
</odoo>
