<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- penalty Entry -->
        <record id="penalty_entry_action_to_all_types" model="ir.actions.act_window">
        <field name="name">Penalty Entries</field>
        <field name="res_model">op.penalty.entry</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('penalty_type_id', '=', active_id)]</field>
    </record>
        <record id="penalty_entry_action_to_progress_type" model="ir.actions.act_window">
        <field name="name">Entry to review</field>
        <field name="res_model">op.penalty.entry</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'create':False}</field>
        <field name="domain">[('penalty_type_id', '=', active_id),('stage_category','=','progress')]</field>
    </record>
        <!-- Type -->
        <record model="ir.ui.view" id="op_penalty_type_form_view">
            <field name="name">op.penalty.entry.type.form.view</field>
            <field name="model">op.penalty.type</field>
            <field name="arch" type="xml">
                <form string="Penalty Entry Types">
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar" options='{"preview_image": "image", "size": [80, 80]}'/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Entry Type Name"/>
                        </h1>
                        <h4>
                            <field name="label_types" placeholder="Entry Label"/>
                        </h4>
                    </div>
                        <group>
                        <field name="description" placeholder="define instruction for your team to categoize subscriptions."/>
                    </group>
                        <group>
                        <group string="Sequence" name="sequence">
                            <field name="automated_sequence"/>
                        <field name="sequence_code" attrs="{
                            'invisible': [('automated_sequence', '=', False)],
                            'required': [('automated_sequence', '=', True)],
                        }"/>
                        </group>
                        <group>
                            <field name="expense_advance"/>
                            <field name="journal_id" options="{'no_create': True,'no_open':True}" />
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        </group>
                    </group>
                        
                        <notebook>
                            <page string="Options" name="options">
                                <group>
                                    <group string="Fields" name="option_settings">
                                        <field name="has_partner" widget="radio" options="{'horizontal': true}"/>
                                        <field name="has_invoice" widget="radio" options="{'horizontal': true}"/>
                                    </group>
                                    <group string="Select Type" name="add_new_fields">
                                        <field name="has_hse_fields" widget="radio" options="{'horizontal': true}"/>
                                        <field name="has_pm_fields" widget="radio" options="{'horizontal': true}"/>
                                        <field name="has_sla_fields" widget="radio" options="{'horizontal': true}"/>
                                        <field name="has_spmrf_fields" widget="radio" options="{'horizontal': true}"/>


                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="account_penalty_entry_type_tree_view">
            <field name="name">op.penalty.type</field>
            <field name="model">op.penalty.type</field>
            <field name="arch" type="xml">
                <tree string="Transfer Order Type" >
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_op_penalty_type" model="ir.actions.act_window">
            <field name="name">Entry Type</field>
            <field name="res_model">op.penalty.type</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No type found. Let's create one!
              </p>
            </field>
        </record>
        
        <menuitem action="action_op_penalty_type" name="Penalty Type" id="menu_penalty_entry_type_config_penalty_entry_type" parent="penalty_entry_config_menu" sequence="1"/>
        
        <!-- Type dashbaord -->
    <record id="penalty_entry_type_dashboard_view_kanban" model="ir.ui.view">
        <field name="name">penalty.type.dashboard.views.kanban</field>
        <field name="model">op.penalty.type</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard o_emphasize_colors o_stock_kanban" create="0">
                <field name="name"/>
                <field name="id"/>
                <field name="image"/>
                <field name="color"/>
                <field name="label_types"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''}" name="subscription_type">
                            <div>
                                <div t-attf-class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary" t-if="!selection_mode">
                                            <t t-if="record.id">
                                <img t-att-src="kanban_image('purchase.subscription.type', 'image', record.id.raw_value)" alt="Approvals Types Image"
                                    class="oe_kanban_avatar float-left mr-3" width="64" height="64"/>
                            </t>
                                        </div>
                                    </div>
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary" t-if="!selection_mode">
                                            <a name="%(penalty_entry_action_to_all_types)d" type="action">
                                                <field name="name"/>
                                            </a>
                                        </div>
                                        <div class="o_primary" t-if="selection_mode">
                                           <field name="name"/>
                                        </div>
                                        <div class="o_secondary">
                                            <field class="o_secondary" name="description" readonly="1" />
                                        </div>
                                    </div>
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary" t-if="!selection_mode">
                                            <button type="object" class="btn btn-primary btn-sm" name="create_request" context="{'penalty_entry_type_id':'active_id'}"><field name="label_types"/></button>

                                        </div>
                                    </div>
                                    <div class="o_kanban_manage_button_section" t-if="!selection_mode">
                                            <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/></a>
                                    </div>
                                </div>
                                <div class="container o_kanban_card_content" t-if="!selection_mode">
                                    <div class="row mt16">
                                        <div class="col-6 o_kanban_primary_left">
                                             <div class="col-12">
                                                <a name="%(penalty_entry_action_to_progress_type)d" type="action">Pending Entries</a>

                                            </div>
                                        </div>
                                        <div class="col-6 o_kanban_primary_right">
                                             
                                        </div>
                                    </div>
                                </div>
                                <div class="container o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <div class="row">
                                        <div class="col-6" role="menuitem" aria-haspopup="true">
                                            <ul class="oe_kanban_colorpicker" data-field="color" role="menu"/>
                                        </div>
                                    </div>
                                </div>
                                
                                
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
     <!-- Penalty Dashbaord -->
    <record id="action_penalty_type_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">op.penalty.type</field>
        <field name="view_mode">kanban</field>
    </record>
        
        <menuitem action="action_penalty_type_dashboard" name="Dashboard" id="menu_penalty_entry_type_dashboard" parent="penalty_entry_root_menu" sequence="1"/>
        
    </data>
</odoo>