<?xml version="1.0" encoding="utf-8"?>
<odoo>	
    <!-- Penalty Entry Stage -->
    <record id="operation_penalty_config_list_view" model="ir.ui.view">
        <field name="name">op.penalty.config.list.view</field>
        <field name="model">op.penalty.config</field>
        <field name="arch" type="xml">
            <tree string="penalty SLA">
                <field name="name"/>
                 <field name="partner_id" />
                <field name="effective_date"/>
            </tree>
        </field>
    </record>
    
    <record id="operation_penalty_config_form_view" model="ir.ui.view">
        <field name="name">op.penalty.config.form.view</field>
        <field name="model">op.penalty.config</field>
        <field name="arch" type="xml">
            <form string="Penlaty SLA">
                <sheet>
                    <group>
                        <group>
                            <field name="name" invisible="1"/>
                            <field name="penalty_type_id" required="1"/>
                            <field name="partner_id" required="1"/>
                        </group>
                        <group>
                            <field name="effective_date" required="1"/>
                            <field name="rule_type" required="1"/>
                        </group>
                    </group>
                    <separator string="Requirements"/>
                    <field name="description" placeholder="Give your team the instructions to manage penalty rules."/>
                    <notebook>
                            <page string="Service Levels" name="penalty_service_level_line" attrs="{'invisible':[('rule_type','!=','sla')]}">
                                <field name="penalty_config_line" attrs="{'invisible':[('rule_type','!=','sla')]}">
                                    <tree string="penalty SLA Line" editable="bottom">
                                       <field name="service_class" required="1"/>
                                       <field name="service_level" required="1"/>
                                       <field name="uptime_from" required="1"/>
                                       <field name="uptime_to" required="1"/>
                                       <field name="penalty_deduction_per" required="1"/>
                                       <field name="penalty_deduction_factor" required="1"/>
                                    </tree>
                                </field>
                            </page>
                        <page string="Service Levels" name="penalty_service_level_occur_line" attrs="{'invisible':[('rule_type','!=','occur')]}">
                                <field name="penalty_config_occur_line" attrs="{'invisible':[('rule_type','!=','occur')]}">
                                    <tree string="penalty Occurence Line" editable="bottom">
                                       <field name="service_level" required="1"/>
                                       <field name="occurence" required="1"/>
                                       <field name="penalty_amount" required="1"/>
                                    </tree>
                                </field>
                            </page>
                        <page string="SOW" name="penalty_service_level_sow_line" attrs="{'invisible':[('rule_type','!=','sow')]}">
                                <field name="penalty_config_sow_line" attrs="{'invisible':[('rule_type','!=','sow')]}">
                                    <tree string="penalty SOW Line" editable="bottom">
                                       <field name="penalty_sow_type_id" required="1"/>
                                        <field name="penalty_sow_id" required="1"/>
                                       <field name="penalty_deduction_a" required="1"/>
                                       <field name="penalty_deduction_b" required="1"/>
                                    </tree>
                                </field>
                            </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
		<record id="action_penalty_rule" model="ir.actions.act_window">
			<field name="name">Penalty Rules</field>
			<field name="res_model">op.penalty.config</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Create a new penalty rule
				</p>
               
			</field>
		</record>
		    
    <menuitem id="penalty_config_sla_rule_menu" name="Penalty Rules" parent="penalty_entry_config_menu"
			action="action_penalty_rule"
			sequence="5" />
		
			
</odoo>


