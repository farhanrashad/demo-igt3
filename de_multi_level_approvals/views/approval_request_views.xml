<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="approval_request_view_form_inherited" model="ir.ui.view">
        <field name="name">approval.request.view.form</field>
        <field name="model">approval.request</field>
        <field name="inherit_id" ref="approvals.approval_request_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_withdraw']" position="attributes">
                <attribute name="attrs">{'invisible':['|','|',('request_status','==','new'),('user_status','in',['new','pending','cancel']),('user_status','=',False)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="replace">
                <button name="action_cancel" string="Cancel" type="object" attrs="{'invisible':['|',('request_status','in',['new','cancel']),'&amp;',('user_status','==',False),('has_access_to_request','==',False)]}" groups="approvals.group_approval_manager"/>
            </xpath>

            <xpath expr="//field[@name='approver_ids']/tree[1]/field[@name='user_id']" position="before">
                <field name="sequence" widget="handle" />
            </xpath>
            <xpath expr="//field[@name='status']" position="before">
                <field name="department_id"/>
                <field name="job_title"/>
                <field name="stage_id"/>
            </xpath>

        </field>
    </record>
</odoo>