<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="approval_category_view_form_inherited" model="ir.ui.view">
        <field name="name">approval.category.view.form</field>
        <field name="model">approval.category</field>
        <field name="inherit_id" ref="approvals.approval_category_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_manager_approver']" position="after">
                <field name="is_parent_approver" />
                <field name="approval_level" />
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Approvers" name="approvers" attrs="{'invisible': [('is_parent_approver', '=', True)]}">
                    <field name="approval_category_line" widget="one2many_list">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle" />
                            <field name="stage_id" />
                            <field name="user_id" />
                            <field name="department_id"/>
                            <field name="job_title"/>
                        </tree>
                    </field>
                </page>
                
            </xpath>
            <xpath expr="//group[@name='approvers']/field[@name='user_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[@name='approvers']/field[@name='approval_minimum']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[@name='approvers']/field[@name='is_manager_approver']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    
    <!-- Approval Stages -->
    <record id="approval_stage_view_list" model="ir.ui.view">
        <field name="name">approval.stage.list</field>
        <field name="model">approval.stage</field>
        <field name="arch" type="xml">
            <tree string="Approval Stages">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="approval_stage_view_form" model="ir.ui.view">
        <field name="name">approval.stage.form</field>
        <field name="model">approval.stage</field>
        <field name="arch" type="xml">
            <form string="Approval Stage">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence" groups="base.group_no_one"/>
                        </group>
                        <group>
                            <field name="fold"/>
                            <field name="prv_stage_id" options="{'no_create':True, 'no_open':True}"/>
                            <field name="next_stage_id" options="{'no_create':True, 'no_open':True}"/>
                        </group>
                    </group>
                    <separator string="Requirements"/>
                    <field name="description"
                           placeholder="Give your team the requirements to move a subscription to this stage."/>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_approval_stage" model="ir.actions.act_window">
        <field name="name">Approval Stages</field>
        <field name="res_model">approval.stage</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="approvals_stages_menu_config"
        parent="approvals.approvals_menu_config"
        name="Approvals Stages"
        action="action_approval_stage"
        groups="approvals.group_approval_manager"
        sequence="20"/>
    
</odoo>