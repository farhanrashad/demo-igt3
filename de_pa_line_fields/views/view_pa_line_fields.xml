<odoo>
    <data>
        <record id="view_pa_line_fields" model="ir.ui.view">
            <field name="name">pa.line.fields.form</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//field[@name='line_ids']//tree//field[@name='price_unit']" position="after">
                    <field name="kpa"/>
                    <field name="tower_manufacture"/>
                    <field name="tower"/>
                    <field name="kmph"/>
                    <field name="candidate"/>
                    <field name="tenant"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>