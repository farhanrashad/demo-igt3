<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!--Adding a salary rule for loan-->
        <record id="structure_type_employee" model="hr.payroll.structure.type">
			<field name="name">Salary Structure</field>
		</record>
        
        <record id="hr_salary_demo" model="hr.payroll.structure">
			<field name="name">Salary</field>
			<field name="type_id" ref="de_hr_employee_loan.structure_type_employee"/>
<!-- 			<field name="regular_pay">True</field> -->
		</record>
        
        
        <record id="hr_rule_input_loan" model="hr.payslip.input.type">
            <field name="code">LO</field>
            <field name="name">Loan</field>
        </record>
        
        
		<record id="hr_rule_loan" model="hr.salary.rule">
			<field name="name">Loan</field>
			<field name="sequence" eval="100"/>
			<field name="code">LO</field>
			<field name="category_id" ref="hr_payroll.DED"/>
			<field name="struct_id" ref="hr_salary_demo"/>
			<field name="condition_select">none</field>
			<field name="amount_select">code</field>
			<field name="amount_python_compute">result = inputs.LO and - (inputs.LO.amount)</field>
			<field name="appears_on_payslip" eval="True"/>
		</record>
	

	</data>
</odoo>
