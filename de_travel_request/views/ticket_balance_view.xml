<odoo>
    <record id="view_travel_balance_form" model="ir.ui.view">
        <field name="name">travel.balance.form</field>
        <field name="model">travel.balance</field>
        <field name="arch" type="xml">
            <form string="Ticket Balance"   create='false'  edit='false' delete='false'>
                
                <sheet>
                    <h3>
                        <field name="name"/>
                    </h3>
                    <group>
                        <group>
                            <field name='crnt_year'/>
                        </group>
                        <group>
                           
                        </group>
                    </group>
                    <notebook>
                        
                        <page string="Balance Lines">
                            <field name='balance_line_ids'>
                                <tree editable='bottom'>
                                    <field name='balance_id' invisible='1'/>
                                    <field name='employee_id'/>
                                   <field name='allocated_balance'/>
                                   <field name='used_balance'/>
                                   <field name='remaining_balance'/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                 <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
            </form>
        </field>
    </record>
    <record id="view_travel_balance_tree" model="ir.ui.view">
        <field name="name">travel.balance.tree</field>
        <field name="model">travel.balance</field>
        <field name="arch" type="xml">
            <tree string="Travel Balance Tree"   create='false'  edit='false' delete='false'>
                <field name='name'/>
                <field name='crnt_year'/>
               
            </tree>
        </field>
    </record>

    <record id="action_travel_balance_view" model="ir.actions.act_window">
        <field name="name">Travel Balance</field>
        <field name="res_model">travel.balance</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_travel_balance_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Records Here.......
            </p>
        </field>
    </record>
</odoo>
