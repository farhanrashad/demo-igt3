<odoo>
    <record id="view_travel_request_form" model="ir.ui.view">
        <field name="name">travel.request.form</field>
        <field name="model">travel.request</field>
        <field name="arch" type="xml">
            <form string="Travel Request">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="action_submit" string="Submit" type="object" states='draft'
                            class='oe_highlight'/>
                    <button name="action_refuse" string="Refuse" type="object" states='submitted'
                            class='oe_highlight'/>
                    <button name="action_approve" string="Approve" type="object" states='submitted'
                            class='oe_highlight'/>
                    <button name="action_set_to_draft" string="Set To Draft" type="object" states='submitted'/>
                </header>
                <sheet>
                    <h3>
                        <field name="travel_request"/>
                    </h3>
                    <group>
                        <group>
                            <field name='name'/>
                            <field name='description_main'/>
                            <field name='travel_type'/>
                            <field name='ticket_arr_paid'/>
                            <label string="Duration" for="date_start"/>
                            <div class="o_row">
                                <field name="date_start"/>
                                <span>to</span>
                                <field name="date_end"/>
                            </div>
                            <field name='days'/>
                        </group>
                        <group>
                            <field name='employee_id'/>
                            <field name='department_id'/>
                            <field name='designation_id'/>
                            <field name='nrc_other_id'/>
                            <field name='passport_no'/>
                            <field name='dob'/>
                        </group>
                    </group>
                    <notebook>
                        <page string="General Information">
                            <group>
                                <group>
                                    <field name='visa_exp_date'/>
                                    <field name='multi_visit_visa'/>
                                    <field name='round_trip'/>
                                    <field name='one_way_trip'/>
                                </group>
                                <group>
                                    <field name='dest_country'/>
                                    <field name='dest_city'/>
                                    <field name='ticket_price'/>
                                    <field name='visa_cost'/>
                                </group>
                            </group>
                            <group>
                                <field name='description' placehorder='Add description here'/>
                            </group>
                        </page>
                        <page string="Accommodation Information">
                            <field name='travel_request_lines'>
                                <tree editable='bottom'>
                                    <field name='hotel_detail'/>
                                    <field name='check_in'/>
                                    <field name='check_out'/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                 <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
            </form>
        </field>
    </record>
    <record id="view_travel_request_tree" model="ir.ui.view">
        <field name="name">travel.request.tree</field>
        <field name="model">travel.request</field>
        <field name="arch" type="xml">
            <tree string="Travel Request Tree">
                <field name='employee_id'/>
                <field name='travel_type'/>
                <field name='name'/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="days"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_travel_request_view" model="ir.actions.act_window">
        <field name="name">Travel Request</field>
        <field name="res_model">travel.request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_travel_request_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Records Here.......
            </p>
        </field>
    </record>
</odoo>
