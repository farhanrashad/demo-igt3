<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custom Entry Penalty -->
        <record id="custom_entry_penalty_action_to_all" model="ir.actions.act_window">
        <field name="name">Custom Entries</field>
        <field name="res_model">account.custom.entry</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('custom_entry_type_id', '=', active_id),('move_type', 'in', ['out_refund','in_refund'])]</field>
    </record>
        <record id="custom_entry_penalty_action_to_progress_type" model="ir.actions.act_window">
        <field name="name">Entry to review</field>
        <field name="res_model">account.custom.entry</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'create':False}</field>
        <field name="domain">[('custom_entry_type_id', '=', active_id),('stage_category','=','progress'),('move_type', 'in', ['out_refund','in_refund'])]</field>
    </record>
    
	 <!-- Penalty Dashbaord -->
    <record id="custom_entry_type_penalty_dashboard_view_kanban" model="ir.ui.view">
        <field name="name">custom.entry.type.penalty.dashboard.views.kanban</field>
        <field name="model">account.custom.entry.type</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard o_emphasize_colors o_stock_kanban" create="0">
                <field name="name"/>
                <field name="id"/>
                <field name="image"/>
                <field name="color"/>
                <field name="label_types"/>
                <field name="move_type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''}" name="subscription_type">
                            <div>
                                <div t-attf-class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary" t-if="!selection_mode">
                                            <t t-if="record.id">
                                <img t-att-src="kanban_image('purchase.subscription.type', 'image', record.id.raw_value)" alt="Approvals Types Image"
                                    class="oe_kanban_avatar float-left mr-3" width="64" height="64"/>
                            </t>
                                        </div>
                                    </div>
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary" t-if="!selection_mode">
                                            <a name="%(custom_entry_penalty_action_to_all)d" type="action">
                                                <field name="name"/>
                                            </a>
                                        </div>
                                        <div class="o_primary" t-if="selection_mode">
                                           <field name="name"/>
                                        </div>
                                        <div class="o_secondary">
                                            <field class="o_secondary" name="description" readonly="1" />
                                        </div>
                                    </div>
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary" t-if="!selection_mode">
                                            <button type="object" class="btn btn-primary btn-sm" name="create_request" context="{'custom_entry_type_id':'active_id'}"><field name="label_types"/></button>

                                        </div>
                                    </div>
                                    <div class="o_kanban_manage_button_section" t-if="!selection_mode">
                                            <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/></a>
                                    </div>
                                </div>
                                <div class="container o_kanban_card_content" t-if="!selection_mode">
                                    <div class="row mt16">
                                        <div class="col-12 o_kanban_primary_left">
                                             <div class="col-12">
                                                <a name="%(custom_entry_penalty_action_to_all)d" type="action">All Entries</a>

                                            </div>
                                        </div>
                                        <div class="col-12 o_kanban_primary_right">
                                            <div class="col-12">
                                                <a name="%(custom_entry_penalty_action_to_progress_type)d" type="action">Pending Entries</a>

                                            </div>
                                             
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="container o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <div class="row">
                                        <div class="col-6" role="menuitem" aria-haspopup="true">
                                            <ul class="oe_kanban_colorpicker" data-field="color" role="menu"/>
                                        </div>
                                    </div>
                                </div>
                                
                                
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <record id="action_penalty_type_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">account.custom.entry.type</field>
        <field name="view_mode">kanban</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('custom_entry_type_penalty_dashboard_view_kanban')})]"/>
        <field name="domain">[('move_type', 'in', ['out_refund','in_refund'])]</field>
    </record>
        
        <menuitem action="action_penalty_type_dashboard" name="Dashboard" id="menu_penalty_type_dashboard" parent="penalty_entry_root_menu" sequence="1"/>
    
    <record id="account_custom_entry_type_form_view_inherit_penalty" model="ir.ui.view">
            <field name="name">account.custom.entry.type.form.view.inehrit.penalty</field>
            <field name="model">account.custom.entry.type</field>
            <field name="inherit_id" ref="de_custom_journal_entry.account_custom_entry_type_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='control_app_fields']" position="after">
                   <group name="control_penalty_fields" string="Penalty Fields" attrs="{'invisible':[('move_type', 'not in', ['out_refund','in_refund'])]}">
                       <field name="has_hse_fields" widget="radio" options="{'horizontal': true}"/>
                       <field name="has_pm_fields" widget="radio" options="{'horizontal': true}"/>
                       <field name="has_sla_fields" widget="radio" options="{'horizontal': true}"/>
                       <field name="has_spmrf_fields" widget="radio" options="{'horizontal': true}"/>
                    </group>
                </xpath>
                
            </field>
    </record>
    
</odoo>