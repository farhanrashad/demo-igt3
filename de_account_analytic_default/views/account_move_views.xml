<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Account Move -->
        <record id="view_account_move_form_inehrit_employee" model="ir.ui.view">
            <field name="name">view.account.move.form.inherit.employee</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='invoice_line_ids']/tree[1]/field[@name='product_id']" position="after">
                    <field name="project_id" options="{&quot;no_create&quot;:true}" optional="show"/>
                    <field name="employee_id" options="{&quot;no_create&quot;:true}" optional="show"/>
                    <field name="department_id" options="{&quot;no_create&quot;:true}" optional="hide"/>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[2]/field[@name='line_ids']/tree[1]/field[@name='account_id']" position="after">
    <field name="employee_id" options="{&quot;no_create&quot;:true}" optional="show"/>
                    <field name="project_id" options="{&quot;no_create&quot;:true}" optional="show"/>
                    <field name="department_id" options="{&quot;no_create&quot;:true}" optional="hide"/>
  </xpath>
                
            </field>
        </record>
        
         <!-- display periods in line views -->
    <record id="view_move_line_tree_inherit_employee" model="ir.ui.view">
        <field name="name">view.move.line.tree.inehrit.employee</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="employee_id" optional="hide" />
                <field name="department_id" optional="hide" />
                <field name="project_id" optional="hide" />
            </field>
        </field>
    </record>
        
    <record id="view_move_line_tree_grouped_general_inherit_employee" model="ir.ui.view">
        <field name="name">view.move.line.tree.grouped.general.inehrit.employee</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped_general"/>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="employee_id" optional="hide" />
                <field name="department_id" optional="hide" />
                <field name="project_id" optional="hide" />
            </field>
        </field>
    </record>
        
    </data>
</odoo>