<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<data>
		<record model="ir.ui.view" id="attendance_wizard_form_view">
			<field name="name">Employee Overtime wizard</field>
			<field name="model">overtime.wizard</field>
			<field name="arch" type="xml">
				<form string="Synchronize Data">
					<div>
						This wizard will calculate employee overtime 
						into overtime request model.
						
					</div>
					
					<footer>
						<button name="cron_create_employee_overtime" type="object"
							string="Overtime Request" class="oe_highlight" />
						
						<button special="cancel" string="Cancel" />
					</footer>
				</form>
			</field>
		</record>

		<act_window id="action_sync_employee_overtime" name="Synchronize Overtime Data"
			res_model="overtime.wizard" view_mode="form" target="new" />

		<menuitem id="sync_employee_overtime_menu" parent="hr_attendance.menu_hr_attendance_settings"
			sequence="111" name="Overtime" action="action_sync_employee_overtime" />

	</data>
</odoo>