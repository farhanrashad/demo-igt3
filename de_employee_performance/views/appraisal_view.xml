<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="appraisal_kra_view" model="ir.ui.view">
        <field name="name">hr.appraisal.kra.form</field>
        <field name="model">hr.appraisal.kra</field>
        <field name="arch" type="xml">
            <form string="Employee Performance KRA">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="weightage" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="appraisal_kra_and_goal_view" model="ir.ui.view">
        <field name="name">hr.appraisal.kra.goal.form</field>
        <field name="model">hr.appraisal.kra.goal</field>
        <field name="arch" type="xml">
            <form string="Employee">
                <sheet>
                    <group>
                        <field name="appraisal_kra_id" invisible="1"/>
                        <field name="goal_id" />
                        <field name="kra_id"/>
						<field name="level_progress" widget="progressbar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="appraisal_kra_view_tree" model="ir.ui.view">
		<field name="name">hr.appraisal.kra.tree</field>
		<field name="model">hr.appraisal.kra</field>
		<field name="arch" type="xml">

			<tree string="Employee Performance KRA">
				<field name="name" />
                <field name="weightage" />
			</tree>

		</field>
	</record>

    <record id="action_kra_view" model="ir.actions.act_window">
        <field name="name">Employee Performance KRA</field>
        <field name="res_model">hr.appraisal.kra</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="view_id" ref="appraisal_kra_view_tree" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add Records...
            </p>
        </field>
    </record>

    <menuitem id="kra_menu" name="KRA" parent="hr_appraisal.menu_hr_appraisal_configuration"
              action="de_employee_performance.action_kra_view"
              sequence="6" />
</odoo>