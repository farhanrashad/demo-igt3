<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_custom_entry_form_view_inherit_penalty" model="ir.ui.view">
            <field name="name">account.custom.entry.form.view.inehrit.penalty</field>
            <field name="model">account.custom.entry</field>
            <field name="inherit_id" ref="de_custom_journal_entry.account_custom_entry_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//sheet[1]" position="inside">
                    <field name="has_hse_fields" invisible="1"/>
                    <field name="has_pm_fields" invisible="1"/>
                    <field name="has_sla_fields" invisible="1"/>
                    <field name="has_spmrf_fields" invisible="1"/>
                </xpath>
                <xpath expr="//page[@name='custom_entry_line']/field[@name='custom_entry_line']/tree[1]" position="inside">
                    <field name="penalty_sow_type_id" attrs="{'invisible':[('parent.has_pm_fields','==','no')], 'required': [('parent.has_pm_fields','==','required')]}"/>
                    <field name="penalty_sow_id" attrs="{'invisible':[('parent.has_pm_fields','==','no')], 'required': [('parent.has_pm_fields','==','required')]}"/>
                    <field name="frequency" attrs="{'invisible':[('parent.has_pm_fields','==','no')], 'required': [('parent.has_pm_fields','==','required')]}"/>
                    <field name="sow_deduct_type" attrs="{'invisible':[('parent.has_pm_fields','==','no')], 'required': [('parent.has_pm_fields','==','required')]}"/>
                    <field name="service_class" attrs="{'invisible':[('parent.has_sla_fields','==','no')], 'required': [('parent.has_sla_fields','==','required')]}"/>
                    <field name="service_level" attrs="{'invisible':[('parent.has_sla_fields','==','no')], 'required': [('parent.has_sla_fields','==','required')]}"/>
                    <field name="uptime" attrs="{'invisible':[('parent.has_sla_fields','==','no')], 'required': [('parent.has_sla_fields','==','required')]}"/>                    
                    <field name="penalty_percent" />
                    
                </xpath>
                
            </field>
    </record>
    
    <record id="action_custom_entry_penalty" model="ir.actions.act_window">
            <field name="name">Operations Penalties</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.custom.entry</field>
            <field name="view_mode">tree,kanban,form,activity</field>
            <field name="context">{}</field>
            <field name="domain">[('move_type', 'in', ['out_refund','in_refund',])]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new custom journal entry!
                </p>
            </field>
    </record>
        
    <menuitem action="action_custom_entry_penalty" name="Penalty Entry" id="menu_custom_entry_penalty_menu_item" groups="group_operations_penalty_user" parent="penalty_entry_menu" sequence="2"/>
    
</odoo>