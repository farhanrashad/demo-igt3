<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_custom_entry_form_view_inherit_om_inv" model="ir.ui.view">
            <field name="name">account.custom.entry.form.view.inehrit.om.inv</field>
            <field name="model">account.custom.entry</field>
            <field name="inherit_id" ref="de_custom_journal_entry.account_custom_entry_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='create_payment']" position="after">
                    <button name="%(de_operations.action_custom_entry_advance_payment_inv)d" string="Create Bill"
                        type="action" class="btn-primary" context="{'create_bill':True}"  attrs="{'invisible':[('allow_advance_inv','=',False)]}"/>
                 </xpath>
                <xpath expr="//button[@name='action_view_invoice']" position="replace">
                    <button type="object"  name="action_view_invoice" attrs="{'invisible': ['|',('allow_advance_inv','=',True),('invoice_count', '=', 0)]}" class="oe_stat_button" icon="fa-pencil-square-o">
                            <field name="invoice_count" widget="statinfo" string="Bill"/>
                            <field name='invoice_ids' invisible="1"/>
                    </button>
                    <button type="object"  name="action_view_invoice" attrs="{'invisible': [('allow_advance_inv','=',False)]}" class="oe_stat_button" icon="fa-pencil-square-o">
                            <field name="invoice_count" widget="statinfo" string="Bill"/>
                    </button>
                </xpath>
                <xpath expr="//group[1]/group[2]" position="inside">
                    <field name="allow_advance_inv" invisible="1"/>
                </xpath>
                
                <xpath expr="//sheet[1]" position="inside">
                    <field name="has_om" invisible="1"/>
                </xpath>
                <xpath expr="//page[@name='custom_entry_line']/field[@name='custom_entry_line']/tree[1]" position="inside">
                    <!-- OM Invoices -->
                    <field name="o_tower_type" attrs="{'column_invisible':[('parent.has_om','==','no')], 'required': [('parent.has_om','==','required')]}"/>
                    <field name="o_product_id" attrs="{'column_invisible':[('parent.has_om','==','no')], 'required': [('parent.has_om','==','required')]}"/>
                    <field name="o_date_rfi" attrs="{'column_invisible':[('parent.has_om','==','no')], 'required': [('parent.has_om','==','required')]}"/>
                    <field name="o_date_onair" attrs="{'column_invisible':[('parent.has_om','==','no')], 'required': [('parent.has_om','==','required')]}"/>
                    <field name="o_date_handover" attrs="{'column_invisible':[('parent.has_om','==','no')], 'required': [('parent.has_om','==','required')]}"/>
                    <field name="o_date_start" attrs="{'column_invisible':[('parent.has_om','==','no')], 'required': [('parent.has_om','==','required')]}"/>
                    <field name="o_date_end" attrs="{'column_invisible':[('parent.has_om','==','no')], 'required': [('parent.has_om','==','required')]}"/>
                    <field name="o_days_rfi" attrs="{'column_invisible':[('parent.has_om','==','no')], 'required': [('parent.has_om','==','required')]}"/>
                    <field name="o_days_onair" attrs="{'column_invisible':[('parent.has_om','==','no')], 'required': [('parent.has_om','==','required')]}"/>
                    <field name="o_amount" sum="OM Total AMount" attrs="{'column_invisible':[('parent.has_om','==','no')], 'required': [('parent.has_om','==','required')]}"/>
                    <field name="o_final_amount" sum="OM Final Amount" attrs="{'column_invisible':[('parent.has_om','==','no')], 'required': [('parent.has_om','==','required')]}"/>
                    <field name="o_charges" sum="OM Charges" attrs="{'column_invisible':[('parent.has_om','==','no')], 'required': [('parent.has_om','==','required')]}"/>
                    
                </xpath>
            </field>
    </record>
    
    <record id="account_custom_entry_type_form_view_inherit_advance_inv" model="ir.ui.view">
            <field name="name">account.custom.entry.type.form.view.inehrit.advance_inv</field>
            <field name="model">account.custom.entry.type</field>
            <field name="inherit_id" ref="de_custom_journal_entry.account_custom_entry_type_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_product_id']" position="after">
                    <field name="allow_advance_inv" />
                    <field name="dp_product_id"  options="{'no_create': true}" attrs="{'invisible':[('allow_advance_inv','=',False)]}"/>
                </xpath>
                
            </field>
    </record>
    
</odoo>