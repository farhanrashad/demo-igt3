<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    
    <record id="account_custom_entry_type_form_view_inherit_om_inv" model="ir.ui.view">
            <field name="name">account.custom.entry.type.form.view.inehrit.om.inv</field>
            <field name="model">account.custom.entry.type</field>
            <field name="inherit_id" ref="de_custom_journal_entry.account_custom_entry_type_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='control_app_fields']" position="inside">
                       <field name="has_om" widget="radio" options="{'horizontal': true}"/>
                </xpath>
                <xpath expr="//field[@name='default_product_id']" position="after">
                    <field name="allow_advance_inv" />
                    <field name="dp_product_id"  options="{'no_create': true}" attrs="{'invisible':[('allow_advance_inv','=',False)]}"/>
                    <field name="advance_journal_id"  options="{'no_create': true}" attrs="{'invisible':[('allow_advance_inv','=',False)]}"/>
                    <field name="amount_advance_limit" attrs="{'invisible':[('allow_advance_inv','=',False)]}"/>
                </xpath>
            </field>
    </record>
    
    <!-- OM Deduction Types -->
    <record model="ir.ui.view" id="account_custom_entry_om_deduction_type_form_view">
        <field name="name">account.custom.entry.om.deduction.type.form.view</field>
        <field name="model">account.custom.entry.om.deduction.type</field>
        <field name="arch" type="xml">
            <form string="Deduction Type">
                <sheet>
                    <group col="4">
                        <field name="name" placeholder="Deduction Type Name"/>
                        <field name="product_id"  options="{'no_create': true}" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_account_custom_entry_om_deduction_type" model="ir.actions.act_window">
            <field name="name">OM Deduction Type</field>
            <field name="res_model">account.custom.entry.om.deduction.type</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No type found. Let's create one!
              </p>
            </field>
        </record>
        
        <menuitem action="action_account_custom_entry_om_deduction_type" name="OM Deduction" id="menu_custom_entry_type_config_custom_entry_om_deduction_type" groups="account.group_account_manager" parent="de_custom_journal_entry.custom_entry_config_menu" sequence="2"/>
    
    
</odoo>