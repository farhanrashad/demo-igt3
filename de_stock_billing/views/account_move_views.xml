<odoo>
  <data>
      
      <record id="stock_picking_form_view_invoice" model="ir.ui.view">
			<field name="name">account.move.form.view</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
				<xpath expr="//div[@name='button_box']//button[@name='open_reconcile_view']" position="after">
					   <button name="action_view_shipment" string="Shipment" type="object" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('shipment_count', '=', 0)]}"/>

				</xpath>
                
                <xpath expr="//page[@name='other_info']//field[@name='ref']" position="after">
					   <field name='shipment_count' invisible="1"/>
				</xpath>
				
			</field>
		</record>
     
      
  </data>
</odoo>