<odoo>
    <data>
        <record model="ir.ui.view" id="hr_contract_overtime_view">
            <field name="name">hr.contract.overtime.form.inherit.view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='information']" position="inside">
                    <group string="Overtime">
                        <group>
                            <label for="rate_day"/>
                            <div class="o_row" name="day_wage">
                                <field name="rate_day"/>
                                <span>/day</span>
                            </div>
                            <label for="rate_hour"/>
                            <div class="o_row" name="hour_wage">
                                <field name="rate_hour"/>
                                <span>/hour</span>
                            </div>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>