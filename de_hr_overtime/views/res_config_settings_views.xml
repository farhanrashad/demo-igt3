<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="res_config_settings_view_form_payroll_overtime" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.payroll.overtime</field>
		<field name="model">res.config.settings</field>
		<field name="priority" eval="25"/>
		<field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Overtime" string="Overtime" data-key="de_hr_overtime" groups="hr.group_hr_manager">
                    <h2>Overtime</h2>
                    <div class="row mt16 o_settings_container" name="pincode_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="Days difference for start date">
                            <div class="o_setting_left_pane">
                                <field name="ot_days_diff_before_payslip_start"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Days difference for start date</span>
                                <div class="text-muted">
                                    The difference days will add in overtime start date from payslip start date
                                </div>
                            </div>
                             <div class="o_setting_left_pane">
                                <field name="ot_days_diff_after_payslip_start"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Days difference for End date</span>
                                <div class="text-muted">
                                    The difference days will add in overtime end date from payslip start date
                                </div>
                            </div>
                        </div>
                    </div>
                        
                </div>
            </xpath>
        </field>
    </record>
    
    <record id="hr_overtime_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'de_hr_overtime', 'bin_size': False}</field>
    </record>
    
        <menuitem id="hr_overtime_config_settings_menu_action" name="Settings" parent="hr_overtime_config_main_menu"
        action="hr_overtime_config_settings_action" sequence="0" groups="base.group_system"/>

</odoo>