<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Expense Type -->
        <record model="ir.ui.view" id="hr_expense_category_form_view_inherit">
            <field name="name">view.expense.category.form.view.inehrit</field>
            <field name="model">hr.expense.type</field>
            <field name="inherit_id" ref="de_empfin_advances.hr_expense_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet[1]" position="inside">
                    <group>
                        <group>
                            <field name="group_id" options="{'no_create': True,'no_open':True}" />
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
        
        <!-- Expense Sheet -->
        <record model="ir.ui.view" id="view_hr_expense_sheet_form_inherit">
            <field name="name">view.hr.expense.sheet.form.inherit.state</field>
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,submit,approval1,approval2,approve,post,done"/>
                </xpath>
               
                <xpath expr="//button[@name='approve_expense_sheets']" position="after">
                    <button name="approve_cateegory_expense_sheets" states="approval1" string="Approve" type="object" groups="hr_expense.group_hr_expense_team_approver" class="oe_highlight o_expense_sheet_approve"/>
                </xpath>
                 <!--
                <xpath expr="//button[@name='approve_expense_sheets']" position="replace">
                    <button name="approve_expense_sheets" states="approve2" string="Approve" type="object" groups="hr_expense.group_hr_expense_team_approver" class="oe_highlight o_expense_sheet_approve"/>
                </xpath>
-->
            </field>
        </record>
        
    </data>
</odoo>
