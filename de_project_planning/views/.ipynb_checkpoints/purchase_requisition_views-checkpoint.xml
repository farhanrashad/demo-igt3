<odoo>
    <data>
        
        <record id="project_planning_product_normal_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="context">{"search_default_filter_to_purchase":1, "purchase_product_template": 1}</field>
        <field name="search_view_id" ref="product.product_template_search_view"/>
        <field name="view_id" eval="False"/> <!-- Force empty -->
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No product found. Let's create one!
          </p><p>
            You must define a product for everything you sell or purchase,
            whether it's a storable product, a consumable or a service.
          </p>
        </field>
    </record>

      <!-- Product menu-->
      <menuitem name="Products" id="project_planning_product_template_menu" action="project_planning_product_normal_action" parent="project_planning_boq_main_menu" sequence="10"/>

        <record id="project_planning_product_product_action" model="ir.actions.act_window">
            <field name="name">Product Variants</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">tree,kanban,form,activity</field>
            <field name="search_view_id" ref="product.product_search_form_view"/>
            <field name="context">{"search_default_filter_to_purchase": 1}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new product variant
              </p><p>
                You must define a product for everything you sell or purchase,
                whether it's a storable product, a consumable or a service.
              </p>
            </field>
        </record>

        <menuitem id="project_planning_product_product_menu" name="Product Variants" action="project_planning_product_product_action"
            parent="project_planning_boq_main_menu" sequence="20" groups="product.group_product_variant"/>
        
        <record id="purchase_demand_form_view_inherit_project" model="ir.ui.view">
            <field name="name">purchase.demand.form.view.inherit.project</field>
            <field name="model">purchase.demand</field>
            <field name="inherit_id" ref="de_purchase_requisition_stock.purchase_demand_form_view_inherit"/>
            <field name="priority">24</field>
            <field name="arch" type="xml">
                <xpath expr="//group[1]/group[2]" position="inside">
                    <field name="project_id"/>
                     <field name="task_id"/>
                </xpath>
            </field>
        </record>
        
        <record id="action_purchase_demand_form_view_inherit_project" model="ir.actions.act_window">
            <field name="name">Purchase Requisition</field>
            <field name="res_model">purchase.demand</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('project_id', '!=', False)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new requisition!
                </p><p>
                    Once the requistion is confirmed.<br/> You will be able to create picking or purchase order.
                </p>
            </field>
        </record>
        

        <menuitem name="Purchase Requisition" id="project_purchase_demand_act" parent="project_planning_boq_main_menu" action="action_purchase_demand_form_view_inherit_project" sequence="30" />

        
        <record id="action_job_order_purchase_demand_all" model="ir.actions.act_window">
            <field name="name">Purchase Requisition</field>
            <field name="res_model">purchase.demand</field>
            <field name="view_mode">form,tree</field>
            <field name="domain">[('task_id', '=', active_id)]</field>
            <field name="context">{
                'default_project_id': active_id,
                'default_task_id': active_id,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new requisition!
                </p><p>
                    Once the requistion is confirmed.<br/> You will be able to create picking or purchase order.
                </p>
            </field>
        </record>
        
        <record id="action_job_order_purchase_demand_new" model="ir.actions.act_window">
            <field name="name">Purchase Requisition</field>
            <field name="res_model">purchase.demand</field>
            <field name="view_mode">form</field>
            <field name="domain">[('task_id', '=', active_id)]</field>
            <field name="context">{
                'default_task_id': active_id,
            }</field>
        </record>

    </data>
</odoo>