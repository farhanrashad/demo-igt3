<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Purchase Requisition -->
        <record id="view_purchase_requisition_form_inherit" model="ir.ui.view">
            <field name="name">view.purchase.requisition.form.inherit</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[1]" position="after">
                    <page name="other_info" string="Other Info">
                        <group name="project" string="Project">
                            <group>
                                <field name="project_id" />
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="project_id" optional="show"/>
                    <field name="state_id" optional="hide" string="Region"/>
                </xpath>
                
            </field>
        </record>
        
    </data>
</odoo>