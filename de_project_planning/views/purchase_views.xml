<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Purchase Order -->
        <record id="purchase_order_form_inherit_project" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.project</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='purchase_delivery_invoice']" position="inside">
                    <group name="project" string="Project">
                        <group>
                            <field name="project_id" />
                        </group>
                    </group>
                    
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="project_id" optional="show"/>
                    <field name="state_id" optional="hide" string="Region"/>
                </xpath>
                
            </field>
        </record>
        
    </data>
</odoo>