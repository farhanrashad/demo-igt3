<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Account Move -->
        <record id="view_account_move_form_inehrit_project" model="ir.ui.view">
            <field name="name">view.account.move.form.inherit.project</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='invoice_line_ids']/tree[1]/field[@name='product_id']" position="after">
                    <field name="project_id" options="{&quot;no_create&quot;:true}" optional="show"/>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[2]/field[@name='line_ids']/tree[1]/field[@name='account_id']" position="after">
    <field name="project_id" options="{&quot;no_create&quot;:true}" optional="show"/>
  </xpath>
                
            </field>
        </record>
        
    </data>
</odoo>