<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_only_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.only.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Generate Barcode" name="generate_product_barcode" type="object" class="oe_highlight" attrs="{'invisible': [('barcode', '!=', False)]}"/>

            </xpath>
        </field>
    </record>
    
    <record id="product_normal_form_view_inherit" model="ir.ui.view">
        <field name="name">product.normal.form.view.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Generate Barcode" name="generate_variant_barcode" type="object" class="oe_highlight" attrs="{'invisible': [('barcode', '!=', False)]}"/>

            </xpath>
        </field>
    </record>
</odoo>