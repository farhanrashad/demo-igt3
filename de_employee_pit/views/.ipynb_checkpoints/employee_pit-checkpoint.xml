<odoo>
    <record id="view_employee_income_tax_form" model="ir.ui.view">
        <field name="name">employee.income.tax.form</field>
        <field name="model">employee.income.tax</field>
        <field name="arch" type="xml">
            <form string="Employee PIT">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="action_confirm" string="Confirm" type="object" states='draft'
                            class='oe_highlight'/>
                    <button name="action_cancel" string="Cancel" type="object" states='confirmed'
                            class='oe_highlight'/>
                    <button name="action_close" string="Close" type="object" states='confirmed'
                            class='oe_highlight'/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <h3>
                                <field name="employee_pit"/>
                            </h3>
                            <field name='employee_id'/>
                            <field name='department_id'/>
                            <field name='marital_stat'  force_save="1"/>
                            <field name='no_of_dependant' readonly="1" force_save="1"/>
                            <field name='no_of_children'/>
                            <field name='father'/>
                            <field name='mother'/>
                            <field name='child'/>
                            <field name='wage'/>
                            <field name='annual_wage'/>
                            <field name='tax_income'/>
                            <field name='ss_amount'/>
                            <field name='monthly_tax' invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Employe PIT">
                            <field name="employee_income_tax_ids">
                                <tree editable="bottom">
                                    <field name="months"/>
                                    <field name="month_salary"/>
                                    <field name="arrears"/>
                                    <field name="gross_salary"/>
                                    <field name="taxable_income"/>
                                    <field name="month_tax" force_tax="1"/>
                                    <field name="conversion_rate"/>
                                    <field name="converted_tax_amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_employee_income_tax_tree" model="ir.ui.view">
        <field name="name">employee.income.tax.tree</field>
        <field name="model">employee.income.tax</field>
        <field name="arch" type="xml">
            <tree string="Employee PIT Tree">
                <field name="employee_pit"/>
                <field name="employee_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_employee_income_tax_view" model="ir.actions.act_window">
        <field name="name">Employee PIT</field>
        <field name="res_model">employee.income.tax</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_employee_income_tax_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Records Here :)
            </p>
        </field>
    </record>
</odoo>
