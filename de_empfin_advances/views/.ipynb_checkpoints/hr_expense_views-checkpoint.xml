<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Expense Sheet Type -->
        <record id="hr_expense_sheet_type_form_view" model="ir.ui.view">
            <field name="name">hr.expense.sheet.type.form.view</field>
            <field name="model">hr.expense.sheet.type</field>
            <field name="arch" type="xml">
                <form string="Advance">
                	<sheet>
                        <div class="oe_title oe_left">
                            <h1>
                            <field name="name" class="oe_inline" placeholder="Name"/>
                            </h1>
                        </div>
		            </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_expense_sheet_type_tree_view">
            <field name="name">hr.expense.sheet.type.tree.view</field>
            <field name="model">hr.expense.sheet.type</field>
            <field name="arch" type="xml">
                <tree string=" Expense type">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        
        <record id="action_hr_expense_sheet_type" model="ir.actions.act_window">
            <field name="name">Expense Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.expense.sheet.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Expense Type
                </p>
            </field>
        </record>       

        <menuitem id="menu_hr_expense_sheet_type" action="action_hr_expense_sheet_type" parent="hr_expense.menu_hr_expense_configuration" name="Expense Type" sequence="2" />
        
        
        <!-- HR Expense Sheet -->
        
        <record model="ir.ui.view" id="view_hr_expense_sheet_form_inherit_advance">
            <field name="name">view.hr.expense.sheet.form.inherit.advance</field>
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]/group[1]" position="inside">
                    <field name="hr_expense_sheet_type_id" options="{'no_create':True}"/>
                </xpath>
                <xpath expr="//group[@name='employee_details']" position="after">
                    <group name="advance_detail" string="Adance Details">
                        <field name="hr_salary_advance_id" options="{'no_create':True}"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='expense_line_ids']" position="replace">
                    <field name="expense_line_ids" nolabel="1" widget="many2many" domain="[('state', '=', 'draft'), ('employee_id', '=', employee_id), ('company_id', '=', company_id)]" options="{'reload_on_button': True}" context="{'form_view_ref' : 'hr_expense.hr_expense_view_form_without_header', 'default_company_id': company_id, 'default_employee_id': employee_id, 'default_hr_salary_advance_id': hr_salary_advance_id}">
                            <tree decoration-danger="is_refused" editable="bottom">
                                <field name="date" optional="show"/>
                                <field name="name"/>
                                <field name="state" invisible="1"/>
                                <field name="reference" optional="hide"/>
                                <field name="analytic_account_id" optional="show" domain="['|', ('company_id', '=', parent.company_id), ('company_id', '=', False)]" groups="analytic.group_analytic_accounting"/>
                                <field name="analytic_tag_ids" optional="hide" widget="many2many_tags" groups="analytic.group_analytic_tags"/>
                                <field name="account_id" optional="hide"/>
                                <field name="message_unread" invisible="1"/>
                                <field name="attachment_number" string=" "/>
                                <button name="action_get_attachment_view" string="View Attachments" type="object" icon="fa-paperclip"/>
                                <field name="unit_amount" optional="hide" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="currency_id" optional="hide"/>
                                <field name="quantity" optional="hide"/>
                                <field name="company_id" invisible="1"/>
                                <field name="tax_ids" optional="show" widget="many2many_tags" groups="account.group_account_readonly" context="{'default_company_id': company_id}"/>
                                <field name="total_amount" optional="show"/>
                                <field name="company_currency_id" invisible="1"/>
                                <field name="total_amount_company" optional="show" groups="base.group_multi_currency"/>
                                <field name="is_refused" invisible="True"/>
                           </tree>
                        </field>
                </xpath>
                <!--
                <xpath expr="//field[@name='expense_line_ids']" position="attributes">
                    <attribute name="context">
                        {'form_view_ref' : 'hr_expense.hr_expense_view_form_without_header', 'default_company_id': company_id, 'default_employee_id': employee_id, 'default_salary_advance_id': hr_salary_advance_id}
                    </attribute>
                </xpath>
-->
            </field>
        </record>
        
        <!-- HR Expense Type -->
        <record id="hr_expense_sheet_form_view" model="ir.ui.view">
            <field name="name">hr.expense.type.form.view</field>
            <field name="model">hr.expense.type</field>
            <field name="arch" type="xml">
                <form string="Advance">
                	<sheet>
                        <div class="oe_title oe_left">
                            <h1>
                            <field name="name" class="oe_inline" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="hr_expense_sheet_type_id" options="{'no_create':True}"/>
                            </group>
                        </group>
		            </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_expense_sheet_type_tree_view">
            <field name="name">hr.expense.type.tree.view</field>
            <field name="model">hr.expense.type</field>
            <field name="arch" type="xml">
                <tree string=" Expense type">
                    <field name="name"/>
                    <field name="hr_expense_sheet_type_id"/>
                </tree>
            </field>
        </record>

        
        <record id="action_hr_expense_type" model="ir.actions.act_window">
            <field name="name">Expense Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.expense.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Expense Type
                </p>
            </field>
        </record>       

        <menuitem id="menu_hr_expense_type" action="action_hr_expense_type" parent="hr_expense.menu_hr_expense_configuration" name="Expense Type" sequence="3" />
        
        <!-- HR Expense -->
        <record model="ir.ui.view" id="hr_expense_from_view_line">
            <field name="name">hr.expense.form.advance</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="before">
                    <field name="hr_salary_advance_id" domain="[('employee_id','=',employee_id),('state','=','paid')]" options="{'no_create':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
                    <field name="advance_line_id" domain="[('advance_id','=',hr_salary_advance_id)]" options="{'no_create':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
                    <field name="hr_expense_sheet_type_id" invisible="1"/>
                    <field name="expense_type_id" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
