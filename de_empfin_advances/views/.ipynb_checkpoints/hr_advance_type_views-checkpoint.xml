<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="hr_salary_advance_type_search_view" model="ir.ui.view">
            <field name="name">hr.advance.type.search</field>
            <field name="model">hr.advance.type</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name" string="Type" filter_domain="['|',('name','ilike',self)]"/>
                  
               </search>
            </field>
        </record>


        <record id="hr_salary_advance_type_form_view" model="ir.ui.view">
            <field name="name">hr.advance.type.form.view</field>
            <field name="model">hr.advance.type</field>
            <field name="arch" type="xml">
                <form string="Advance">
                	<sheet>
                       
                        <div class="oe_title oe_left">
                            <h1>
                            <field name="name" class="oe_inline" placeholder="Name"/>
                            </h1>
                        </div>
                	<group>
                        <group>
                        <field name="product_id" options="{'no_create':True}" />
                        </group>
                    </group>
                       
		            </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_salary_advance_type_tree_view">
            <field name="name">hr.advance.type.tree.view</field>
            <field name="model">hr.advance.type</field>
            <field name="arch" type="xml">
                <tree string=" Advance type">
                    <field name="name"/>
                   <field name="product_id"/>
                </tree>
            </field>
        </record>

        
        <record id="action_hr_salary_advance_type" model="ir.actions.act_window">
            <field name="name">Advance Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.advance.type</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="hr_salary_advance_type_search_view"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Advanes Type.
                </p>
            </field>
        </record>

      

   
       
        <menuitem id="hr_advance_config" name="Configuration" parent="de_empfin_core.emp_fin_root_menu" sequence="3"/>   

        <menuitem id="menu_hr_salary_advance" action="action_hr_salary_advance_type" parent="hr_advance_config" name="Advance Type" sequence="1" />
      
    </data>
</odoo>