<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="hr_salary_advance_report_tree_view" model="ir.ui.view">
        <field name="name">hr.salary.advance.report.tree.view</field>
        <field name="model">hr.salary.advance.report</field>
        <field name="arch" type="xml">
            <tree string="Advance View">
                <field name="employee_id"/>
                <field name="mon"/>
                <field name="adv"/>
                <field name="ded"/>
                <field name="balance"/>
            </tree>
        </field>
    </record>
    

    <record id="hr_salary_advance_report_pivot_view" model="ir.ui.view">
         <field name="name">hr.salary.advance.report.pivot</field>
         <field name="model">hr.salary.advance.report</field>
         <field name="arch" type="xml">
             <pivot string="Advance Pivot" disable_linking="True">
                 <field name="employee_id" type="row"/>
                 <field name="mon" type="col"/>
                 <field name="adv" type="measure"/>
                 <field name="ded" type="measure"/>
                 <field name="balance" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="hr_salary_advance_report_graph_view" model="ir.ui.view">
         <field name="name">hr.salary.advance.report.graph</field>
         <field name="model">hr.salary.advance.report</field>
         <field name="arch" type="xml">
             <graph string="Order Stock" type="line">
                 <field name="name" type="row" />
             </graph>
         </field>
    </record>

    <record id="hr_advance_salary_report_search_view" model="ir.ui.view">
        <field name="name">hr.salary.advance.report.search</field>
        <field name="model">hr.salary.advance.report</field>
        <field name="arch" type="xml">
            <search string="Sales Stock Report">
                <field name="name"/>
                <separator/>
                <field name="employee_id"/>
                <field name="mon"/>
               
                <group expand="1" string="Group By">
                    <filter string="Employee" name="employee" context="{'group_by':'employee_id'}"/>
                    <filter string="Month" name="month" context="{'group_by':'mon'}"/>
                    <separator/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hr_advance_salary_report" model="ir.actions.act_window">
        <field name="name">Advance Analysis</field>
        <field name="res_model">hr.salary.advance.report</field>
        <field name="view_mode">pivot,graph,tree</field>
        <field name="view_id"></field>  <!-- force empty -->
        <field name="search_view_id" ref="hr_advance_salary_report_search_view"/>
        <field name="context">{'search_default_employee':1, 'group_by_no_leaf':1,'group_by':[]}</field>
    </record>
    
    <menuitem id="hr_advance_salary_report_action_menu" action="action_hr_advance_salary_report" parent="employee_salary_advance_menu" name="Advance Analysis" sequence="20" groups="de_employee_advance_salary.group_sal_adv_director"/>    
    
</odoo>
