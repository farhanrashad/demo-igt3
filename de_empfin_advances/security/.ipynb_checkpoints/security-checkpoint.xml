<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record model="ir.module.category" id="module_category_hr_advaces">
        <field name="name">Advances</field>
        <field name="description">Helps you manage your payrolls.</field>
        <field name="sequence">17</field>
       </record>

    <record id="group_hr_advance_line_manager" model="res.groups">
        <field name="name">Line Manager Approval</field>
        <field name="category_id" ref="module_category_hr_advaces"/>
    </record>

    <record id="group_hr_advance_hr_manager" model="res.groups">
        <field name="name">HR Manager Approval</field>
        <field name="category_id" ref="module_category_hr_advaces"/>
    </record>
        
        
     <record id="group_hr_advance_finance_manager" model="res.groups">
        <field name="name">Finance Manager Approval</field>
        <field name="category_id" ref="module_category_hr_advaces"/>
    </record>    

        <record id="rule_advance_salary_multi_company" model="ir.rule">
            <field name="name">Advance Request Multi Company</field>
            <field name="model_id" ref="model_hr_salary_advance"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
         </record>

        <record id="hr_salary_advance_manager_rule" model="ir.rule">
            <field name="name">Salary Advance</field>
            <field name="model_id" ref="model_hr_salary_advance"/>
            <field name="groups" eval="[(4, ref('hr.group_hr_user')),(4, ref('account.group_account_user'))]"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="hr_salary_advance_employee_rule" model="ir.rule">
            <field name="name">Salary Advance Rule For Employee</field>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="global" eval="True"/>
            <field name="model_id" ref="model_hr_salary_advance"/>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>