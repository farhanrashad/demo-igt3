<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_product_serial_generate_form" model="ir.ui.view">
            <field name="name">product.serial.generate.form</field>
            <field name="model">product.serial.generate</field>
            <field name="arch" type="xml">
                <form string="Product Generate">
                    <group>
                      <group>
                          <field name="serial_count" />  
                          <field name='product_ids'  widget='many2many_tags' invisible="1"/>
                      </group>
                        
                    </group>
                   
                    <footer>
                        <button string='Generate' name="action_generate_serial" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_product_serial_generate_action" model="ir.actions.act_window">
            <field name="name">Product Serial</field>
            <field name="res_model">product.serial.generate</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_product_serial_generate_form"/>
        </record> 
    

</odoo>