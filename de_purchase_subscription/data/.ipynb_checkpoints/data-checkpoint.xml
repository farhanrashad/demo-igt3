<odoo>
    <data>
        
        <record id="auto_email_sale_subscription" model="ir.cron">
            <field name="name">Sale Subscription Auto Email Cron</field>
            <field name="model_id" ref="de_sale_subscription.model_sale_subscription_agreement"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.action_subscription_invoice_mail()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>
        
        
        <record id="auto_sale_subscription_invoice_cron" model="ir.cron">
            <field name="name">Sale Subscription Auto Invoice Generation Cron</field>
            <field name="model_id" ref="de_sale_subscription.model_sale_subscription_agreement"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.create_auto_sale_subscription_invoice()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>
        
        
    </data>
</odoo>
