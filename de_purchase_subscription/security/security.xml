<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_purchase_subscription_category">
        <field name="name">Purchase Subscriptions</field>
        <field name="description">Helps you handle subscriptions and recurring invoicing.</field>
        <field name="sequence">3</field>
    </record>
    
    <record id="group_purchase_subscription_view" model="res.groups">
        <field name="name">See Subscriptions</field>
        <field name="category_id" ref="module_purchase_subscription_category"/>
        <field name="comment">The user will have read access to subscriptions.</field>
    </record>

    <record id="group_purchase_subscription_user" model="res.groups">
        <field name="name">Subscription User</field>
        <field name="category_id" ref="module_purchase_subscription_category"/>
        <field name="comment">The user will have write access to Subscriptions.</field>
        <field name="implied_ids" eval="[(4, ref('de_purchase_subscription.group_purchase_subscription_view'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
    
    <record id="group_purchase_subscription_manager" model="res.groups">
        <field name="name">Subscription Manager</field>
        <field name="category_id" ref="module_purchase_subscription_category"/>
        <field name="comment">The user will have write access to Subscriptions.</field>
        <field name="implied_ids" eval="[(4, ref('de_purchase_subscription.group_purchase_subscription_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
    
    

</odoo>
