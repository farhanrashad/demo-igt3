<odoo>
	<record id="view_move_form_inherit_purchase_subscription" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="subscription_type_id" />
            </xpath>
            <xpath expr="//page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree" position="inside">
                <field name="subscription_start_date" optional="hide"/>
                <field name="subscription_end_date" optional="hide"/>
            </xpath>
        </field>
    </record>
	
</odoo>
