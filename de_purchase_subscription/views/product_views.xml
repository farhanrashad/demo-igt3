<odoo>
	
    <record id="product_template_search_view_inherit_purchase_subscription" model="ir.ui.view">
        <field name="name">product.template.search.inherit</field>
        <field name="model">product.template</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='consumable']" position="after">
                <filter name="filter_purchase_subscription" string="Subscription Products" domain="[('purchase_subscription', '=', True)]"/>
            </xpath>
        </field>
    </record>
    
    <record id="product_template_action_purchase_subscription" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="product_template_search_view_inherit_purchase_subscription"/>
        <field name="domain">[('subscription_plan_id', '=', active_id)]</field>
        <field name="context">{"default_type": "service", "default_purchase_subscription": True, "default_subscription_plan_id": active_id}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_empty_folder">
            No product found
          </p><p>
            You will find here all the products related to this subscription template.
          </p>
        </field>
    </record>
    
    
	<record id="product_template_form_view_inherit_subscription" model="ir.ui.view">
	        <field name="name">product.template.form.view.inherit.subscription</field>
	        <field name="model">product.template</field>
	        <field name="inherit_id" ref="product.product_template_only_form_view"/>
	        <field name="arch" type="xml">
	            <xpath expr="//group[@name='bill']" position="after">
                    <group name="purchase_subscription" string="Subscription">
                        <field name="purchase_subscription" />
                        <field name="subscription_plan_id" />
                    </group>
	            </xpath>
	        </field>
	    </record>
	
    
	<record id="action_product_template_purchase_subscription_view" model="ir.actions.act_window">
            <field name="name">Subscription Product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,form,tree,activity</field>
			<field name="domain">[('purchase_subscription', '=', True)]</field>
			<field name="context">{'default_purchase_subscription': True}</field>
            <field name="view_id" eval="False"/> <!-- Force empty -->
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new Subscription Product
              </p><p>
                You must define a product for Subscription.
              </p>
            </field>
        </record>

    <menuitem id="purchase_subscription_purchase_subscription_products_menu" name="Products" parent="purchase_subscription_menu"
			action="action_product_template_purchase_subscription_view" sequence="2" />
</odoo>
