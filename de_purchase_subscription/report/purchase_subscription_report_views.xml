<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_subcription_report_pivot" model="ir.ui.view">
         <field name="name">subscription.report.pivot</field>
         <field name="model">purchase.subscription.report</field>
         <field name="arch" type="xml">
             <pivot disable_linking="True" sample="1">
                 <field name="subscription_plan_id" type="row"/>
                 <field name="user_id" type="col"/>
                 <field name="recurring_monthly" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="view_subcription_report_graph" model="ir.ui.view">
         <field name="name">subscription.report.graph</field>
         <field name="model">purchase.subscription.report</field>
         <field name="arch" type="xml">
             <graph sample="1" disable_linking="1">
                 <field name="subscription_plan_id" type="row"/>
                 <field name="recurring_monthly" type="measure"/>
             </graph>
         </field>
    </record>

    <record id="purchase_subscription_report_view_cohort" model="ir.ui.view">
        <field name="name">purchase.subscription.report.cohort</field>
        <field name="model">purchase.subscription.report</field>
        <field name="arch" type="xml">
            <cohort string="Subscription" date_start="date_start" date_stop="date_end" interval="month" sample="1"/>
        </field>
    </record>

    <record id="purchase_subscription_report_cohort_action" model="ir.actions.act_window">
        <field name="name">Retention Analysis</field>
        <field name="res_model">purchase.subscription.report</field>
        <field name="view_mode">cohort,graph,pivot</field>
    </record>

    <record id="purchase_subscription_report_pivot_action" model="ir.actions.act_window">
        <field name="name">Subscriptions Analysis</field>
        <field name="res_model">purchase.subscription.report</field>
        <field name="view_mode">pivot,graph,cohort</field>
    </record>

    <record id="purchase_subscription_report_search" model="ir.ui.view">
        <field name="name">purchase.subscription.report.search</field>
        <field name="model">purchase.subscription.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Subscription"/>
                <field name="subscription_plan_id"/>
                <field name="user_id"/>
                <field name="product_id"/>
                <field name="partner_id" operator="child_of"/>
                <filter name="my_subscriptions" string="My Subscriptions" domain="[('user_id','=',uid)]"/>
                <separator/>
                <filter name="open" string="Running" domain="[('stage_category', '=', 'progress')]" help="Running Subscriptions"/>
                <filter name="Expired" string="Expired" domain="[('stage_category', '=', 'closed')]" help="Closed subscriptions"/>
                <separator/>
                <separator/>
                <filter name="filter_date_start" date="date_start"/>
                <filter name="filter_date_end" date="date_end"/>
                <group expand="1" string="Group By">
                    <filter string="Stage" name="stage" domain="[]" context="{'group_by': 'stage_id'}"/>
                    <filter string="Purchase Representative" name="purchase_rep" domain="[]" context="{'group_by': 'user_id'}"/>
                    <filter string="Customer" name="customer" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter string="Subscription Plan" name="subscription_plan" domain="[]" context="{'group_by': 'subscription_plan_id'}"/>
                    <filter string="Start Date" name="start_month" domain="[]" context="{'group_by': 'date_start'}" />
                    <filter string="End Date" name="end_month" domain="[]" context="{'group_by': 'date_end'}" />
                </group>
            </search>
        </field>
    </record>

    
    <menuitem id="menu_purchase_subscription_report_pivot" name="Subscriptions" parent="purchase_subscription_report_menu" action="purchase_subscription_report_pivot_action" sequence="1"/>
    
</odoo>
