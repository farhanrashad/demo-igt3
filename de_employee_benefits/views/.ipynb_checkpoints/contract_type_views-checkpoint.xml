<odoo>
  <data>
      
   <record id="contract_type_view_form" model="ir.ui.view">
        <field name="name">contract.type.form.view</field>
        <field name="model">contract.type</field>
        <field name="arch" type="xml">
            <form string="contract type">
               
                <sheet>
                  
                    <div class="oe_title">
                        <h1><field name="name"  placeholder="Reference" nolabel="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence_code" />
                            <field name="company_id" />
                        </group>
                        <group>
                            <field name="sequence_id"  invisible='1'/>
                        </group>
                    </group>
                   
                </sheet>
            </form>
        </field>
    </record>
      
    
  
      
    <record id="contract_type_view_tree" model="ir.ui.view">
        <field name="name">contract.type.tree.view</field>
        <field name="model">contract.type</field>
        <field name="arch" type="xml">
            <tree string="contract type">
                <field name="name"/> 
                <field name="sequence_code"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="contract_type_action" model="ir.actions.act_window">
        <field name="name">Contract Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">contract.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="contract_type_menu" name="Contract Type" parent="hr_payroll.menu_hr_payroll_employees_root" action="contract_type_action" sequence="3"/>

  </data>
</odoo>