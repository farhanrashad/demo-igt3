<odoo>
  <data>
      
        <record id="shift_hr_attendance_tree_view" model="ir.ui.view">
			<field name="name">hr_attendance.view_attendance_tree_inherit</field>
			<field name="model">hr.attendance</field>
			<field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
			<field name="arch" type="xml">
				<xpath expr="//tree//field[@name='employee_id']" position="after">
					<field name="date"/>
					<field name="department_id" />
					<field name="is_overtime" invisible="1"/>
                    <field name="shift_type_id"/>
					<field name="shift_time_in"/>
					<field name="shift_time_out"/>
				</xpath>
				<xpath expr="//tree//field[@name='worked_hours']" position="after">
					<field name="overtime_hours"/>
					<field name="entry_type" />
					<field name="is_overtime" invisible="1"/>
				</xpath>
			</field>
		</record>
  </data>
</odoo>