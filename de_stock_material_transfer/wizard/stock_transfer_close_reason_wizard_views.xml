<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View transfer order Close Reason wizard -->
    <record id="transfer_order_close_reason_view_form" model="ir.ui.view">
        <field name="name">transfer.order.close.reason.form</field>
        <field name="model">stock.transfer.close.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Close Reasons">
                <group class="oe_title">
                    <field name="close_reason_id" string="Reason" required="1" options="{'no_create':True, 'no_open':True}"/>
                    <field name="close_reason_message"/>
                </group>
                <footer>
                    <button name="set_close" string="Submit" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action transfer order Close Reason -->
    <record id="transfer_order_close_reason_wizard_action" model="ir.actions.act_window">
        <field name="name">Close Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.transfer.close.reason.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="transfer_order_close_reason_view_form"/>
        <field name="target">new</field>
    </record>

</odoo>
