<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_stock_rma_order_replace_products_form_view" model="ir.ui.view">
            <field name="name">wizard.stock.rma.order.replace.products.form.view</field>
            <field name="model">stock.cma.replace.wizard</field>
            <field name="arch" type="xml">
                <form string="Sale Order">
                    <p class="oe_grey"> </p>
                    <group>
                        <group>
                        </group>
                        <group>
                        </group>
                    </group>
         
                    <group>
                        <field name="cma_order_lines" nolabel ="1">
                        <tree editable="botttom" create = 'false'>
                            <field name="product_id" readonly="1" style="width:20%;"/>
                            <field name="replace_product_id" />
                            <field name="name" />
                            <field name="delivered_qty" />
                            <field name="product_uom_qty" />
                            <field name="product_uom" groups="uom.group_uom" class="oe_inline"/>
                            <field name="stock_cma_condition_id" />
                        </tree>
                        </field>
                    </group>
                   
                    <footer>
                        <button name="action_create_picking" string="Create Picking" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

<!-- ACTION     -->

        <record id="action_stock_cma_order_products_wizard" model="ir.actions.act_window">
            <field name="name">Create Picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.cma.replace.wizard</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</odoo>