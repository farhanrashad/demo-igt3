<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="module_category_stock_requisition" model="ir.module.category">
        <field name="name">Internal Requisition</field>
        <field name="description">Helps you manage material internal requisitions</field>
        <field name="sequence">3</field>
    </record>
        
        <record id="group_stock_requisition_user" model="res.groups">
            <field name="name">Internal Requisition User</field>
            <field name="category_id" ref="module_category_stock_requisition"/>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        
        <record id="group_stock_requisition_manager" model="res.groups">
            <field name="name">Internal Requisition Manager</field>
            <field name="category_id" ref="module_category_stock_requisition"/>
            <field name="implied_ids" eval="[(4, ref('group_stock_requisition_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        
        <record id="stock_requisition_personal_rule" model="ir.rule">
            <field name="name">Personal Requisitions</field>
            <field ref="model_stock_transfer_order" name="model_id"/>
            <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('group_stock_requisition_user'))]"/>
        </record>
        <record id="stock_requisition_see_all" model="ir.rule">
            <field name="name">All Orders</field>
            <field ref="model_stock_transfer_order" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_stock_requisition_manager'))]"/>
        </record>

    </data>
</odoo>