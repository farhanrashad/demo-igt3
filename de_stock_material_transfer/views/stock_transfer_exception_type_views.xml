<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record model="ir.ui.view" id="stock_transfer_exception_type_form_view">
            <field name="name">stock.transfer.exception.type.form.view</field>
            <field name="model">stock.transfer.exception.type</field>
            <field name="arch" type="xml">
                <form string="Transfer Order Category">
                    <sheet>
                        <group>
                            <group>
                                <field name="code" required="1"/>
                                <field name="name" required="1"/>
                                <field name="message_type" required="1"/>
                                <field name="message" required="1"/>
                                <field name="sequence" required="1"/>
                            </group>
                            <group>
                                <field name="transfer_order_type_id" options="{'no_create':True,'no_open':True}"/>
                                <field name="transfer_order_category_id" options="{'no_create':True,'no_open':True}"/>

                                <field name="stage_id" options="{'no_create':True,'no_open':True}"/>
                                <field name="apply_stage_id" options="{'no_create':True,'no_open':True}"/>
                                <field name="exec_stage_id" options="{'no_create':True,'no_open':True}"/>
                                <field name="stage_auto_apply" />
                                <field name="picking_type_id" options="{'no_create':True,'no_open':True}"/>
                                <field name="location_src_id" options="{'no_create':True,'no_open':True}" attrs="{'required':[('picking_type_id','!=', False)]}"/>
                                <field name="location_dest_id" options="{'no_create':True,'no_open':True}"/>
                                <field name="return_location_id" options="{'no_create':True,'no_open':True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
             </field>
        </record>
        <record model="ir.ui.view" id="stock_transfer_exception_type_tree_view">
            <field name="name">stock.transfer.exception.type.tree.view</field>
            <field name="model">stock.transfer.exception.type</field>
            <field name="arch" type="xml">
                <tree string="Transfer Transactions" >
                    <field name="sequence" widget="handle"/>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="stage_id" options="{'no_create':True,'no_open':True}"/>
                    <field name="message_type" optional="hide"/>
                    <field name="transfer_order_type_id" optional="show"/>
                    <field name="transfer_order_category_id" optional="show"/>
                    <field name="apply_stage_id" optional="hide" options="{'no_create':True,'no_open':True}"/>
                    <field name="stage_auto_apply" optional="hide"/>
                    <field name="picking_type_id" optional="hide" options="{'no_create':True,'no_open':True}"/>
                    <field name="return_picking_type_id" optional="hide" options="{'no_create':True,'no_open':True}"/>
                    <field name="location_src_id" optional="hide" options="{'no_create':True,'no_open':True}"/>
                    <field name="location_dest_id" optional="hide" options="{'no_create':True,'no_open':True}"/>
                </tree>
            </field>
        </record>

        <record id="action_stock_exception_type" model="ir.actions.act_window">
            <field name="name">Exception Type</field>
            <field name="res_model">stock.transfer.exception.type</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No material condition found. Let's create one!
              </p>
            </field>
        </record>
        
        <menuitem action="action_stock_exception_type" name="Exceptions" id="menu_stock_transfer_config_transfer_exception_menu" groups="group_stock_requisition_manager" parent="stock_requisition_config_menu" sequence="4"/>
        
    </data>
</odoo>