<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tags -->
        <record model="ir.ui.view" id="action_stock_transfer_order_type_search_view">
            <field name="name">stock.transfer.order.type.search.view</field>
            <field name="model">stock.transfer.order.type</field>
            <field name="arch" type="xml">
                <search string="Transfer Order Type">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="action_stock_transfer_order_type_form_view">
            <field name="name">stock.transfer.order.type.form.view</field>
            <field name="model">stock.transfer.order.type</field>
            <field name="arch" type="xml">
                <form string="Transfer Order Types">
                    <sheet>
                        <field name="active" invisible="1" />
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="image" widget="image" class="oe_avatar" options='{"preview_image": "image", "size": [80, 80]}'/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Approvals Type Name"/>
                            </h1>
                            <h3>
                                <field name="code"/>
                            </h3>
                        </div>

                        <group>
                            <group>
                                <field name="disallow_staging"/>
                                <field name="automated_sequence"/>
                                <field name="sequence_code" attrs="{'invisible':[('automated_sequence','=',False)]}"/>
                                <field name="sequence_id" attrs="{'invisible':[('automated_sequence','=',False)]}"/>

                            </group>
                            <group>
                                <field name="company_id"/>
                                <field name="sequence_id" invisible="1"/>
                                <field name="group_id" options="{'no_create':True}"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Give your team the details for material transfer type."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="action_stock_transfer_order_type_tree_view">
            <field name="name">stock.transfer.order.type.tree.view</field>
            <field name="model">stock.transfer.order.type</field>
            <field name="arch" type="xml">
                <tree string="Transfer Order Type" >
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_stock_transfer_order_type" model="ir.actions.act_window">
            <field name="name">Requisition Type</field>
            <field name="res_model">stock.transfer.order.type</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No requisition type found. Let's create one!
              </p>
              <p>
                  types are perfect to categorize your requisitions.
              </p>
            </field>
        </record>
        
        <menuitem action="action_stock_transfer_order_type" name="Type" id="stock_requisition_config_type_menu" groups="group_stock_requisition_manager" parent="stock_requisition_config_menu" sequence="1"/>
        
    </data>
</odoo>