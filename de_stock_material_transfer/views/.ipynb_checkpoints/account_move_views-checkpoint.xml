<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_move_in_refund_type_transfer_order" model="ir.actions.act_window">
        <field name="name">Vendor Credit Note</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="account.view_in_invoice_tree"/>
        <field name="search_view_id" ref="account.view_account_invoice_filter"/>
        <field name="domain">[('stock_transfer_order_id','=',active_id),('move_type', '=', 'in_refund')]</field>
        <field name="context">{
            "default_stock_transfer_order_id":active_id,
            "default_move_type": "in_refund",
            }
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a vendor credit note for penalty/surcharge for Stock Trasnfer
            </p>
        </field>
    </record>
    
    <record id="view_move_form_inherit_transfer_order" model="ir.ui.view">
            <field name="name">view.move.form.inherit.cma.order</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="stock_transfer_order_id" readonly="1" invisible="1"/>
                </xpath>
            </field>
    </record>
    
</odoo>