<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
     <record id="project_task_view_purchase_attachment" model="ir.ui.view">
            <field name="name">project.task.purchase.attachment</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
