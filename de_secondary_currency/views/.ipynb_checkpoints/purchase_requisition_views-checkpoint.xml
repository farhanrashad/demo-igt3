<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Purchase Order List view -->
        
        <record id="purchase_requisition_view_tree_inherit_base_currency" model="ir.ui.view">
            <field name="name">purchase.requisition.view.tree.inherit.base.currency</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="company_currency_id" invisible="1"/>
                     <field name="total_base_signed" sum="Total base" optional="show"/>
                </xpath>
            </field>
        </record>
        
        
        <record id="purchase_requisition_form_inherit_base_currency" model="ir.ui.view">
            <field name="name">purchase.requisition.form.inherit.base.currency</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form" />
            <field name="arch" type="xml">
                  <xpath expr="//page[@name='products']/field[@name='line_ids']/tree[1]" position="inside">
                      <field name="company_currency_id" invisible="1"/>
                     <field name="price_unit_base" AVG="BC Price" optional="show"/>
                      <field name="price_total_base" sum="BC Total" optional="show"/>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>