<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Account Move -->
        <record id="view_in_invoice_tree_inherit_sec_currency" model="ir.ui.view">
            <field name="name">view.in.invoice.tree.inehrit.sec.currency</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="company_currency_id" invisible="0"/>
                    <field name="total_base_signed" sum="Total base" optional="hide"/>
                    <field name="amount_total" sum="Total Amount" optional="show" />
                </xpath>
            </field>
        </record>
        
        <record id="view_out_invoice_tree_inherit_sec_currency" model="ir.ui.view">
            <field name="name">view.out.invoice.tree.inehrit.sec.currency</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="company_currency_id" invisible="0"/>
                    <field name="total_base_signed" sum="Total base" optional="hide"/>
                    <field name="amount_total" sum="Total Amount" optional="hide" />
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>