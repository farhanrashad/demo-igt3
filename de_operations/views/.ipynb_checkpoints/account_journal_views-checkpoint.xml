<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="view_account_journal_form_view_inherit" model="ir.ui.view">
            <field name="name">view.account.journal.form.view.inherit</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='advanced_settings']/group[1]" position="after">
                    <group>
                        <group string="Deductions" name="deduction_fields">
                            <field name="deduction_fields" />
                        </group>
                    </group>
                </xpath>
            </field>
    </record>
    
</odoo>