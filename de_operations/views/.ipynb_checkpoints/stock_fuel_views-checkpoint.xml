<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_operations_move_in_invoice_type" model="ir.actions.act_window">
            <field name="name">Fuel Bills</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="account.view_in_invoice_tree"/>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="domain">[('move_type', '=', 'in_invoice'),('journal_id.code','=','FUEL')]</field>
            <field name="context">{'default_move_type': 'in_invoice','default_move_journal_name':'Fuel Bills'}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a vendor fuel bill
              </p><p>
                Create invoices, register payments and keep track of the discussions with your vendors.
              </p>
            </field>
    </record>
    
    <menuitem id="operations_purchase_fuel_fuel_bill_menu" name="Fuel Bills" parent="operations_purchase_fuel_menu" action="action_operations_move_in_invoice_type" sequence="1" />
    
    <menuitem id="operations_purchase_fuel_fuel_refill_menu" name="Fuel Refill" parent="operations_purchase_fuel_menu" action="de_fuel_management.action_stock_refill" sequence="1" />


    
</odoo>