<odoo>
    <data>
        <record id="project_form_view_inherit_hoto" model="ir.ui.view">
            <field name="name">project.form.view.inherit.hoto</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project" />
            <field name="priority">24</field>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="site_hoto"/>
                </field>
            </field>
        </record>
        
        <!-- hOTO Tasks -->
        <record id="view_task_form_hoto" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <form string="Task" class="o_form_project_tasks">
                    <header>
                        <field name="stage_id" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}" attrs="{'invisible': [('project_id', '=', False)]}"/>
                    </header>
                    <sheet string="HOTO Task">
                        <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name" class="o_task_name text-truncate" required="0" placeholder="HOTO Task Title..."/>
                        </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" string="Partner" required="1" widget="res_partner_many2one"/>
                                <field name="project_id" required="0" readonly="0" domain="[('site_hoto','=',True),('active', '=', True), ('company_id', '=', company_id)]"/>
                                <field name="site_id" required="1" domain="[('allow_site_planning','=',True), ('active', '=', True), ('company_id', '=', company_id)]"/>
                                <field name="hoto_type" required="1" />
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                                <field name="site_hoto" invisible="1" />
                            </group>
                            <group>
                                <field name="date_handover" required="1" />
                                <field name="date_rfi" />
                                <field name="date_onair" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_task_hoto_tree" model="ir.ui.view">
            <field name="name">project.task.tree</field>
            <field name="model">project.task</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <tree string="HOTO Tasks" multi_edit="1" sample="1">
                    <field name="message_needaction" invisible="1" readonly="1"/>
                    <field name="is_closed" invisible="1" />
                    <field name="sequence" invisible="1" readonly="1"/>
                    <field name="name" optional="hide" />
                    <field name="project_id" optional="hide" readonly="1"/>
                    <field name="partner_id" string="Partner" />
                     <field name="site_id" />
                    <field name="date_handover" />
                    <field name="date_rfi" optional="hide" readonly="1"/>
                    <field name="date_onair" />
                    <field name="user_id" optional="hide" widget="many2one_avatar_user"/>
                    <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                    <field name="activity_ids" widget="list_activity" optional="show"/>
                    <field name="stage_id" invisible="context.get('set_visible',False)" optional="show" readonly="1"/>
                </tree>
            </field>
        </record>
        
        <record id="action_view_task_hoto" model="ir.actions.act_window">
            <field name="name">Tasks</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">tree,form,activity</field>
            <field name="domain">[('site_hoto','=',True)]</field>
            <field name="context">{'search_default_my_tasks': 1,'default_site_hoto':True}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_task_hoto_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_task_form_hoto')})]"/>
            <field name="search_view_id" ref="project.view_task_search_form"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No record found. Let's create one!
                </p>
            </field>
        </record>

        <menuitem action="action_view_task_hoto" name="HOTO Sites" id="menu_operations_site_hoto" groups="account.group_account_manager" parent="operations_custom_entries_menu" sequence="3"/>

    </data>
</odoo>