<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <!-- Sale Subscription Stage-->
    <record id="sale_subscription_stage_view_form_inherit" model="ir.ui.view">
        <field name="name">sale.subscription.stage.view.form.inherit</field>
        <field name="model">sale.subscription.agreement.stage</field>
        <field name="inherit_id" ref="de_sale_subscription.sale_subscription_agreement_stage_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fold']" position="after">
                <field name="subscription_type_id" options="{'no_create':True}" />
            </xpath>
        </field>
    </record>
    
    <!-- Sale Subscription -->
    <record id="view_sale_subscription_form_inherit_type" model="ir.ui.view">
        <field name="name">view.sale.subscription.form.inherit.type</field>
        <field name="model">sale.subscription.agreement</field>
        <field name="inherit_id" ref="de_sale_subscription.sale_subcription_agreement_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='subscription_plan_id']" position="after">
                <field name="subscription_type_id" options="{'no_create':True}" />
            </xpath>
        </field>
    </record>
    
    <!-- Purchase Subscription Lease Agreement  -->
		<record id="action_sale_subscription_agreement" model="ir.actions.act_window">
			<field name="name">Subscriptions</field>
			<field name="res_model">sale.subscription.agreement</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_mode">kanban,tree,form,pivot,graph,cohort,activity</field>
            <field name="context">{"search_default_my_subscriptions":1}</field>
            <field name="domain">[]</field>
            <field name="search_view_id" eval='False'/>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Create a new Subscription
				</p>
                <p>
                    Create subscription agreement to manage recurring billing &amp; payments. </p>
			</field>
		</record>
		

		<menuitem id="sale_subscription_sale_subscription_agreement_menu" name="Subscription Agreement" parent="operations_sale_menu" action="action_sale_subscription_agreement" sequence="1" />
    
    
			
</odoo>


