<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Purchase Subscription Plan-->
        <record id="purchase_subcription_plan_form_view_payment_schedule" model="ir.ui.view">
            <field name="name">purchase.subscription.plan.form.view.payment.schedule</field>
            <field name="model">purchase.subscription.plan</field>
            <field name="inherit_id" ref="de_purchase_subscription.purchase_subscription_plan_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                        <page string="Payment Schedule" id="payment_schedule">
                            <field name="payment_schedule_ids">
                                <tree editable="bottom">
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="no_of_month"/>
                                    <field name="monthly_amount"/>
                                    <field name="total_amount"/>
                                    <field name="note"/>
                                    <field name="subscription_plan_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    
                </xpath>
                
            </field>
        </record>
        
        <!-- Purchase Subscription -->
        <record id="purchase_subcription_form_view_payment_schedule" model="ir.ui.view">
            <field name="name">purchase.subscription.form.view.payment.schedule</field>
            <field name="model">purchase.subscription</field>
            <field name="inherit_id" ref="de_purchase_subscription.purchase_subcription_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//header//button[@name='generate_recurring_invoice']" position="replace">
                     <button string="Create Bill" name="action_create_bill" type="object" attrs="{'invisible': [('stage_category', '!=', 'progress')]}" class="btn-primary"/>

                </xpath>
                
                <xpath expr="//field[@name='code']" position="after">
                                    <field name="journal_id"/>
                                    <field name="account_id"/>
                </xpath>    

                <xpath expr="//notebook" position="inside">
                        <page string="Payment Schedule" id="payment_schedule">
                            <field name="payment_schedule_lines">
                                <tree editable="bottom">
                                    <field name="is_bill"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="no_of_month"/>
                                    <field name="monthly_amount"/>
                                    <field name="total_amount"/>
                                    <field name="status"/>
                                    <field name="note"/>
                                    <field name="subscription_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    
                </xpath>
                
            </field>
        </record>
        
    </data>
</odoo>