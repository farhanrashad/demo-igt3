<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="purchase_subscription_plan_wizard_form_view" model="ir.ui.view">
        <field name="name">purchase.subscription.plan.wizard.form.view</field>
        <field name="model">purchase.subscription.plan.wizard</field>
        <field name="arch" type="xml">
            <form string="Payment Schedule">
                <group>
                    <group>
                        <field name="purchase_subscription_id" invisible="1"/>
                        <label for="amount" />
                        <div>
                            <field name="amount" class="oe_inline"/>
                            <span  class="oe_inline">%</span>
                        </div>
                        <label for="recurring_interval"/>
                            <div class="o_row">
                                <span class="mr-1">Every</span>
                                <field name="recurring_interval" required="1"/>
                                <field name="recurring_interval_type" class="field_rule_type" required="1"/>
                            </div>
                    </group>
                </group>
                <group>
                    <button name="populate_subscription" id="create_invoice_open" string="Populate Schedule" type="object" class="btn-primary"/>
                </group>
                <group>
                    <field name="wizard_plan_line_ids" nolabel ="1">
                        <tree editable="botttom" create = 'false'>
                            <field name="date_from" />
                            <field name="date_to" />
                            <field name="recurring_price" />
                            <field name="recurring_intervals" />
                        </tree>
                    </field>
                </group>
                

                <footer>
                    <button name="create_invoices" id="create_invoice_open" string="Plan Schedule" type="object" context="{'open_bills': True}" class="btn-primary"/>
                    
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchase_subscription_plan_wizard" model="ir.actions.act_window">
        <field name="name">Schedule Plan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.subscription.plan.wizard</field>
        <field name="view_id" ref="purchase_subscription_plan_wizard_form_view"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>