<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <data>            
            
        <!-- hr employee inherited form view -->
	  <record id="hr_employee_form_view_inh_social" model="ir.ui.view">
			<field name="name">hr.employee.form.inh.social</field>
			<field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
			<field name="arch" type="xml">
				<xpath expr="//page[@name='hr_settings']" position='after'>
				 <page string="Social Links">
					 <field name="social_link_ids">
							<tree  editable="bottom">
                                <field name="name" options="{'no_create':True,'no_open':True}"/>
                                <field name="social_icon" widget="image" options="{'size':[0,15]}"/>
                                <field name="social_link"/>
							</tree>
					 </field>
				 </page>
                </xpath>
            </field>
     </record>
        
        
      <record id="view_social_type_link_form" model="ir.ui.view">
		<field name="name">hr.employee.social.type.form</field>
		<field name="model">hr.employee.social.type</field>
		<field name="arch" type="xml">
			<form string="Social Link Types">
				<sheet>
                    <div name="social">
                            <group name="social">
                                <field name="name"/>
                            </group>
                        </div>
                        <div name="logo">
                            <group name="social_icon">
                                <field name="social_icon" widget="image" class="oe_avatar float-left"/>
                            </group>
                        </div>

				</sheet>
			</form>

		</field>
	</record>


	<record id="view_social_type_link_tree" model="ir.ui.view">
		<field name="name">hr.employee.social.type.tree</field>
		<field name="model">hr.employee.social.type</field>
		<field name="arch" type="xml">

			<tree string="Social Link Types Tree">
                <field name="name"/>
<!--                 <field name="social_icon" widget="image"/> -->
<!--                 <field name="link"/> -->
			</tree>

		</field>
	</record>

	<record id="view_social_type_link_search" model="ir.ui.view">
		<field name="name">student.data.search</field>
		<field name="model">hr.employee.social.type</field>
		<field name="arch" type="xml">

			<search string="Social Link Types">
                <field name="name" />
			</search>
		</field>
	</record>
    
	<record id="action_view_social_type_link_new" model="ir.actions.act_window">
		<field name="name">Social Link Types</field>
		<field name="res_model">hr.employee.social.type</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_mode">tree,form</field>
		<field name="domain">[]</field>
		<field name="context">{}</field>
        <field name="view_id" ref="de_employee_social_links.view_social_type_link_tree" />
<!-- 		<field name="search_view_id" ref="view_social_type_link_search" /> -->
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Add Social Link Types ...
			</p>
		</field>
	</record>  
        
