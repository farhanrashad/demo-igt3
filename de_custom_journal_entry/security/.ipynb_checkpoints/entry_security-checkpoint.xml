<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="module_category_custom_entries" model="ir.module.category">
        <field name="name">Custom Entries</field>
        <field name="description">Helps you manage custom Entries</field>
        <field name="sequence">3</field>
    </record>
        
        <record id="group_custom_entry_user" model="res.groups">
            <field name="name">Entry User</field>
            <field name="category_id" ref="module_category_custom_entries"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        
        <record id="group_custom_entry_manager" model="res.groups">
            <field name="name">Entry Manager</field>
            <field name="category_id" ref="module_category_custom_entries"/>
            <field name="implied_ids" eval="[(4, ref('group_custom_entry_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        
        <record id="custom_entry_personal_rule" model="ir.rule">
            <field name="name">Personal Entries</field>
            <field ref="model_account_custom_entry" name="model_id"/>
            <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('group_custom_entry_user'))]"/>
        </record>
        <record id="custom_entry_see_all" model="ir.rule">
            <field name="name">All Orders</field>
            <field ref="model_account_custom_entry" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_custom_entry_user'))]"/>
        </record>

    </data>
</odoo>