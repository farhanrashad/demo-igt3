<odoo>
    <data>
        <!-- Create Vendor Bill -->
        <record model="ir.actions.act_window" id="action_custom_entry_to_bill">
        <field name="name">Vendor Bill</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">form,tree</field>
        <field name="domain">[('custom_entry_id','=',active_id)]</field>
        <field name="context">{
            "default_custom_entry_id":active_id,
            "default_user_id": False,
            }
        </field>
    </record>
        <!-- Custom Entries Views -->
        
        <record id="account_custom_entry_tree_view" model="ir.ui.view">
            <field name="name">account.custom.entry.tree.view</field>
            <field name="model">account.custom.entry</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Custom Entry" multi_edit="1" sample="1">
                    <field name="message_needaction" invisible="1"/>
                    <field name="name" string="Number" readonly="1" decoration-bf="1"/>
                    <field name="date_entry" string="Date" widget="date" optional="show"/>
                   
                    <field name="user_id" optional="show" widget="many2one_avatar_user" invisible="1"/>
                    <field name="activity_ids" widget="list_activity" optional="show"/>
                    <field name="company_id" groups="base.group_multi_company" optional="show" readonly="1"/>
                    <field name="stage_id" />
                    

                </tree>
            </field>
    </record>
        
        <record id="account_custom_entry_form_view" model="ir.ui.view">
            <field name="name">account.custom.entry.form.view</field>
            <field name="model">account.custom.entry</field>
            <field name="arch" type="xml">
                <form string="Custom Journal Entry" class="" >
                    <header>
                        <field name="expense_advance" invisible="1"/>
                        
                        <button name="button_submit" string="Submit for Approval" type="object" class="oe_highlight" attrs="{'invisible': [('stage_category', 'not in', ['draft'])]}"/>
                        <button name="button_confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible': [('stage_category', 'not in', ['progress'])]}"/>
                        <button name="button_done" type="object" string="Close" class="oe_highlight" attrs="{'invisible': [('stage_category', 'not in', ['confirm'])]}"/>

                        
                        <button name="button_refuse" string="Refuse" type="object" 
                        attrs="{'invisible': [('stage_category', 'not in', ['progress'])]}"/>
                    <button name="button_cancel" string="Cancel" type="object" 
                        attrs="{'invisible': [('stage_category', 'not in', ['progress'])]}"/>
                        
                        <button name="%(action_custom_entry_to_bill)d" string="Create Bill" type="action" invisible="1" />
                        <button string="Create Bill" name="create_advance_expense" type="object" class="btn-primary" invisible="1"/>
                        
                        
                        <button string="Create Bill" name="create_bill" type="object" class="btn-primary" attrs="{'invisible':['|',('invoice_count','=',1),('account_entry_type','!=','bill')]}"/>

                        <button string="Create Payment" name="create_payment" type="object" class="btn-primary" attrs="{'invisible':[('account_entry_type','!=','payment')]}" invisible="0"/>

                        



                        <field name="stage_id" widget="statusbar" domain="[('custom_entry_type_ids', '=', custom_entry_type_id)]" />

                    </header>
                    <sheet>
                        <field name="stage_category" invisible="1" />
                        <field name="account_entry_type" invisible="1" />
                        
                        
                        <div class="oe_button_box" name="button_box">
                        <button type="object"  name="action_view_invoice"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o">
                            <field name="invoice_count" widget="statinfo" string="Bill"/>
                            <field name='invoice_ids' invisible="1"/>
                        </button>
                          <button name="action_view_payment" type="object" class="oe_stat_button"  icon="fa-usd"  string="Payment" attrs="{'invisible': [('payment_count', '=', 0)]}">
                        </button>  
                    </div>
                        <field name="payment_count" invisible="1"/>
                        <field name="has_partner" invisible="1"/>
                        <field name="has_ref" invisible="1"/>
                        <field name="has_supplier_bill" invisible="1"/>
                        <field name="has_period" invisible="1"/>
                        <field name="has_attachment" invisible="1"/>
                        <field name="has_description" invisible="1"/>
                        <field name="has_purchase_requisition" invisible="1"/>
                        <field name="has_purchase" invisible="1"/>
                        <field name="has_picking" invisible="1"/>
                        <field name="has_invoice" invisible="1"/>
                        
                        <field name="has_project" invisible="1"/>
                        <field name="has_analytic" invisible="1"/>
                        <field name="has_product" invisible="1"/>
                        <field name="has_advanced" invisible="1"/>
                        
                        <field name="has_rent_vechile" invisible="1"/>
                        <field name="has_travel" invisible="1"/>
                        <field name="has_hotel" invisible="1"/>
                        <field name="has_electricity" invisible="1"/>
                        <field name="has_fuel_drawn" invisible="1"/>
                        <field name="has_fuel_filling" invisible="1"/>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                    <group>
                        <group>
                            
                            <field name="partner_id" attrs="{'invisible':[('has_partner','==','no')], 'required': [('has_partner','==','required')], 'readonly':[('stage_category','!=', 'draft')]}" />
                            <field name="ref" attrs="{'invisible':[('has_ref','==','no')], 'required': [('has_ref','==','required')], 'readonly':[('stage_category','!=', 'draft')]}" />
                            <field name="supplier_bill_ref" attrs="{'invisible':[('has_supplier_bill','==','no')], 'required': [('has_supplier_bill','==','required')], 'readonly':[('stage_category','!=', 'draft')]}" />
                            
                        </group>
                        <group>
                            <field name="custom_entry_type_id" />
                            <field name="date_entry" attrs="{'readonly': [('stage_category', '!=', 'draft')]}" />
                            <label for="date_entry_month" string="Period" attrs="{'invisible':[('has_period','==','no')]}" />
                            <div class="o_row" attrs="{'invisible':[('has_period','==','no')]}">
                                <field name="date_entry_month" attrs="{'invisible':[('has_period','==','no')], 'required': [('has_period','==','required')], 'readonly':[('stage_category','!=', 'draft')]}" />
                                <span class="mr-1" attrs="{'invisible':[('has_period','==','no')]}"> - </span>
                                <field name="date_entry_year" attrs="{'invisible':[('has_period','==','no')], 'required': [('has_period','==','required')], 'readonly':[('stage_category','!=', 'draft')]}" />
                            </div>

                            <field name="date_submit" attrs="{'invisible':[('date_submit','!=',True)]}" />
                            <field name="date_approved" attrs="{'invisible':[('date_approved','!=',True)]}" />
                            <field name="user_id" attrs="{'readonly': [('stage_category', '!=', 'draft')]}" />
                            <field name="currency_id" attrs="{'readonly': [('stage_category', '!=', 'draft')]}" />
                            <field name="company_id" attrs="{'readonly': [('stage_category', '!=', 'draft')]}" />
                            <field name="purchase_requisition_id" attrs="{'invisible':[('has_purchase_requisition','==','no')], 'required': [('has_purchase_requisition','==','required')], 'readonly':[('stage_category','!=', 'draft')]}" />
                            <field name="purchase_id" attrs="{'invisible':[('has_purchase','==','no')], 'required': [('has_purchase','==','required')], 'readonly':[('stage_category','!=', 'draft')]}" />
                            <field name="picking_id" attrs="{'invisible':[('has_picking','==','no')], 'required': [('has_picking','==','required')], 'readonly':[('stage_category','!=', 'draft')]}" />
                            <field name="invoice_id" attrs="{'invisible':[('has_invoice','==','no')], 'required': [('has_invoice','==','required')], 'readonly':[('stage_category','!=', 'draft')]}" />
                            <field filename="attachment1_filename" name="attachment1" attrs="{'invisible':[('has_attachment','==','no')], 'required':[('has_attachment','==','required')]}"/>

                        </group>
                    </group>
                        <group>
                        <field name="description" placeholder="enter narration for entry..." attrs="{'invisible':[('has_description','==','no')], 'required': [('has_description','==','required')], 'readonly':[('stage_category','!=', 'draft')]}" />
                        </group>
                     <notebook>
                        <page string="Line" name="custom_entry_line">
                            <field name="custom_entry_line" widget="one2many_list">
                                <tree string="Custom Entry Line" editable="bottom">
                                    <field name="company_id" invisible="1" />
                                    <field name="currency_id" invisible="1" />
                                    <field name="product_uom_category_id" invisible="1" />
                                    
                                    <!-- Project -->
                                    <field name="project_id" attrs="{'column_invisible':[('parent.has_project','==','no')], 'required': [('parent.has_project','==','required')]}" options="{'no_create':True}" />
                                    <field name="state_id" attrs="{'column_invisible':[('parent.has_project','==','no')]}" optional="hide" />

                                    <field name="analytic_account_id" attrs="{'column_invisible':[('parent.has_analytic','==','no')], 'required': [('parent.has_analytic','==','required')]}" options="{'no_create':True}" optional="hide"/>
                                    <field name="analytic_tag_ids" attrs="{'column_invisible':[('parent.has_analytic','==','no')], 'required': [('parent.has_analytic','==','required')]}" widget="many2many_tags" options="{'no_create':True,}" optional="hide"/>
                                    
                                    <!-- Product -->
                                    <field name="product_id" attrs="{'column_invisible':[('parent.has_product','==','no')], 'required': [('parent.has_product','==','required')]}"/>
                                    <field name="product_uom_id" attrs="{'column_invisible':[('parent.has_product','==','no')], 'required': [('parent.has_product','==','required')]}"/>
                                    <field name="product_qty" attrs="{'column_invisible':[('parent.has_product','==','no')], 'required': [('parent.has_product','==','required')]}"/>
                                    <field name="price_unit" attrs="{'column_invisible':[('parent.has_product','==','no')], 'required': [('parent.has_product','==','required')]}"/>
                                    <field name="price_subtotal" attrs="{'column_invisible':[('parent.has_product','==','no')], 'required': [('parent.has_product','==','required')]}"/>
                                    <field name="advance_subtotal" attrs="{'column_invisible':[('parent.has_advanced','==','no')], 'required': [('parent.has_advanced','==','required')]}"/>


                                    <!-- Travel  -->
                                    <field name="date_departure" attrs="{'column_invisible':[('parent.has_travel','==','no')], 'required': [('parent.has_travel','==','required')]}"/>
                                    <field name="date_arrival" attrs="{'column_invisible':[('parent.has_travel','==','no')], 'required': [('parent.has_travel','==','required')]}"/>
                                    <field name="travel_from" attrs="{'column_invisible':[('parent.has_travel','==','no')], 'required': [('parent.has_travel','==','required')]}"/>
                                    <field name="travel_to" attrs="{'column_invisible':[('parent.has_travel','==','no')], 'required': [('parent.has_travel','==','required')]}"/>
                                    <field name="travel_purpose" attrs="{'column_invisible':[('parent.has_travel','==','no')], 'required': [('parent.has_travel','==','required')]}"/>
                                    <field name="trave_ref" attrs="{'column_invisible':[('parent.has_travel','==','no')], 'required': [('parent.has_travel','==','required')]}"/>

                                    <!--  Fleet -->
                                    <field name="vehicle_no" attrs="{'column_invisible':[('parent.has_rent_vechile','==','no')], 'required': [('parent.has_rent_vechile','==','required')]}"/>
                                    <field name="driver_name" attrs="{'column_invisible':[('parent.has_rent_vechile','==','no')], 'required': [('parent.has_rent_vechile','==','required')]}"/>
                                    <field name="rent_days" attrs="{'column_invisible':[('parent.has_rent_vechile','==','no')], 'required': [('parent.has_rent_vechile','==','required')]}"/>

                                    <!-- Accomodation -->
                                     <field name="date_in" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/>
                                    <field name="date_out" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/>
                                    <field name="hote_travel_purpose" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/>
                                    <field name="hotel_name" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/>
                                    
                                    
                                    <!-- Electricity -->
                                    <field name="amount_advanced" sum="advanced" attrs="{'column_invisible':[('parent.has_electricity','==','no')], 'required': [('parent.has_electricity','==','required')]}"/>
                                    <field name="date_bill_from" attrs="{'column_invisible':[('parent.has_electricity','==','no')], 'required': [('parent.has_electricity','==','required')]}"/>
                                    <field name="date_bill_to" attrs="{'column_invisible':[('parent.has_electricity','==','no')], 'required': [('parent.has_electricity','==','required')]}"/>
                                    <field name="meter_number" attrs="{'column_invisible':[('parent.has_electricity','==','no')], 'required': [('parent.has_electricity','==','required')]}"/>
                                    <field name="opening_reading" attrs="{'column_invisible':[('parent.has_electricity','==','no')], 'required': [('parent.has_electricity','==','required')]}"/>
                                    <field name="closing_reading" attrs="{'column_invisible':[('parent.has_electricity','==','no')], 'required': [('parent.has_electricity','==','required')]}"/>
                                    <field name="additional_unit" attrs="{'column_invisible':[('parent.has_electricity','==','no')], 'required': [('parent.has_electricity','==','required')]}"/>
                                    <field name="total_unit" sum="Total Units" attrs="{'column_invisible':[('parent.has_electricity','==','no')], 'required': [('parent.has_electricity','==','required')]}"/>
                                    <field name="maintainence_fee" sum="Maintenance Fee" attrs="{'column_invisible':[('parent.has_electricity','==','no')], 'required': [('parent.has_electricity','==','required')]}"/>
                                    <field name="hp_fee" sum="Horsepower Fee" attrs="{'column_invisible':[('parent.has_electricity','==','no')], 'required': [('parent.has_electricity','==','required')]}"/>
                                    <field name="KHW_charges" sum="KWH Charges" attrs="{'column_invisible':[('parent.has_electricity','==','no')], 'required': [('parent.has_electricity','==','required')]}"/>
                                    <field name="actual_KHW_charges" sum="Actual KWH" attrs="{'column_invisible':[('parent.has_electricity','==','no')], 'required': [('parent.has_electricity','==','required')]}"/>
                                    <field name="other_charges" sum="Other Chrages" attrs="{'column_invisible':[('parent.has_electricity','==','no')], 'required': [('parent.has_electricity','==','required')]}"/>
                                    <field name="amount_total_electricity" sum="Total Electricity" attrs="{'column_invisible':[('parent.has_electricity','==','no')], 'required': [('parent.has_electricity','==','required')]}"/>                                    
                                    
                                    <!-- Fuel drawn-->
                                    <field name="d_date" attrs="{'column_invisible':[('parent.has_fuel_drawn','==','no')], 'required': [('parent.has_fuel_drawn','==','required')]}"/>
                                    <field name="d_partner_id" attrs="{'column_invisible':[('parent.has_fuel_drawn','==','no')], 'required': [('parent.has_fuel_drawn','==','required')]}"/>
                                    <field name="d_product_qty" sum="Drawn Product Qty" attrs="{'column_invisible':[('parent.has_fuel_drawn','==','no')], 'required': [('parent.has_fuel_drawn','==','required')]}"/>
                                    <field name="d_price_unit" attrs="{'column_invisible':[('parent.has_fuel_drawn','==','no')], 'required': [('parent.has_fuel_drawn','==','required')]}"/>
                                    <field name="d_price_subtotal" sum="Drawn Total" attrs="{'column_invisible':[('parent.has_fuel_drawn','==','no')], 'required': [('parent.has_fuel_drawn','==','required')]}"/>
                                    <field name="d_booklet_no" attrs="{'column_invisible':[('parent.has_fuel_drawn','==','no')], 'required': [('parent.has_fuel_drawn','==','required')]}"/>
                                    <field name="d_receipt_no" attrs="{'column_invisible':[('parent.has_fuel_drawn','==','no')], 'required': [('parent.has_fuel_drawn','==','required')]}"/>
                                    
                                    <!-- Fuel Filled-->
                                    <field name="f_date" attrs="{'column_invisible':[('parent.has_fuel_filling','==','no')], 'required': [('parent.has_fuel_filling','==','required')]}"/>
                                    <field name="f_partner_id" attrs="{'column_invisible':[('parent.has_fuel_filling','==','no')], 'required': [('parent.has_fuel_filling','==','required')]}"/>
                                    <field name="f_gen_name" attrs="{'column_invisible':[('parent.has_fuel_filling','==','no')], 'required': [('parent.has_fuel_filling','==','required')]}"/>
                                    <field name="f_gen_capacity" attrs="{'column_invisible':[('parent.has_fuel_filling','==','no')], 'required': [('parent.has_fuel_filling','==','required')]}"/>
                                    <field name="f_curr_drgh" attrs="{'column_invisible':[('parent.has_fuel_filling','==','no')], 'required': [('parent.has_fuel_filling','==','required')]}"/>
                                    <field name="f_opening_stock" sum="Filled Opening Stock" attrs="{'column_invisible':[('parent.has_fuel_filling','==','no')], 'required': [('parent.has_fuel_filling','==','required')]}"/>
                                    <field name="f_closing_stock" sum="Filled Closing Stock" attrs="{'column_invisible':[('parent.has_fuel_filling','==','no')], 'required': [('parent.has_fuel_filling','==','required')]}"/>
                                    <field name="f_product_qty" sum="Filled Qty" attrs="{'column_invisible':[('parent.has_fuel_filling','==','no')], 'required': [('parent.has_fuel_filling','==','required')]}"/>
                                    <field name="f_price_unit" attrs="{'column_invisible':[('parent.has_fuel_filling','==','no')], 'required': [('parent.has_fuel_filling','==','required')]}"/>
                                    <field name="f_price_subtotal" sum="Filled Total" attrs="{'column_invisible':[('parent.has_fuel_filling','==','no')], 'required': [('parent.has_fuel_filling','==','required')]}"/>
                                    <field name="f_booklet_no" attrs="{'column_invisible':[('parent.has_fuel_filling','==','no')], 'required': [('parent.has_fuel_filling','==','required')]}"/>
                                    <field name="f_receipt_no" attrs="{'column_invisible':[('parent.has_fuel_filling','==','no')], 'required': [('parent.has_fuel_filling','==','required')]}"/>

                                    
                                    <field name='note' optional="show"/>

                                </tree>
                            </field>
                            <!-- Totals  -->
                                <group class="oe_subtotal_footer oe_right" >
                                    <field name="amount_advanced_total" attrs="{'column_invisible':[('amount_advanced_total','==',0.0)]}"/>
                                    <field name="amount_total" />
                                    <field name="amount_balance" class="oe_subtotal_footer_separator" attrs="{'column_invisible':[('amount_balance','==',0)]}"/>
                                </group>
                            
                         </page>
                    </notebook>
                    </sheet>
                    <!-- Attachment preview -->
                    <div class="o_attachment_preview" />
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="action_custom_entry" model="ir.actions.act_window">
            <field name="name">Custom Journal Entry</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.custom.entry</field>
            <field name="view_mode">tree,kanban,form,activity</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new custom journal entry!
                </p>
            </field>
    </record>
        
    <menuitem action="action_custom_entry" name="Custom Entry" id="menu_custom_entry_type_config_custom_entry" groups="account.group_account_manager" parent="custom_entry_menu" sequence="2"/>
        
    </data>
</odoo>