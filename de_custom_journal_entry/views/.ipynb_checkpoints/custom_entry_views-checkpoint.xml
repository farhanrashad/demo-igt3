<odoo>
    <data>
        <!-- Create Vendor Bill -->
        <record model="ir.actions.act_window" id="action_custom_entry_to_bill">
        <field name="name">Vendor Bill</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">form,tree</field>
        <field name="domain">[('custom_entry_id','=',active_id)]</field>
        <field name="context">{
            "default_custom_entry_id":active_id,
            "default_user_id": False,
            }
        </field>
    </record>
        <!-- Custom Entries Views -->
        
        <record id="account_custom_entry_tree_view" model="ir.ui.view">
            <field name="name">account.custom.entry.tree.view</field>
            <field name="model">account.custom.entry</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Custom Entry" multi_edit="1" sample="1">
                    <field name="message_needaction" invisible="1"/>
                    <field name="name" string="Number" readonly="1" decoration-bf="1"/>
                    <field name="date_entry" string="Date" widget="date" optional="show"/>
                   
                    <field name="user_id" optional="show" widget="many2one_avatar_user" invisible="1"/>
                    <field name="activity_ids" widget="list_activity" optional="show"/>
                    <field name="company_id" groups="base.group_multi_company" optional="show" readonly="1"/>
                    <field name="state" />
                </tree>
            </field>
    </record>
        
        <record id="account_custom_entry_form_view" model="ir.ui.view">
            <field name="name">account.custom.entry.form.view</field>
            <field name="model">account.custom.entry</field>
            <field name="arch" type="xml">
                <form string="Custom Journal Entry" class="" >
                    <header>
                        <field name="expense_advance" invisible="1"/>
                        
                        <button name="button_confirm" type="object" states="draft" string="Confirm Entry" class="oe_highlight" />
                        <button name="button_cancel" states="draft,confirm" string="Cancel" type="object" />
                        <button name="%(action_custom_entry_to_bill)d" string="Create Bill" type="action" invisible="1" />
                        <button string="Create Bill" name="create_custom_invoice" type="object" class="btn-primary" attrs="{'invisible':['|',('invoice_count','=',1),('state','!=','confirm')]}"/>
                        <button string="Create Bill" name="create_advance_expense" type="object" class="btn-primary" invisible="1"/>




                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>

                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        <button type="object"  name="action_view_invoice"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o">
                            <field name="invoice_count" widget="statinfo" string="Vendor Bills"/>
                            <field name='invoice_ids' invisible="1"/>
                        </button>
                    </div>
                        
                        <field name="has_partner" invisible="1"/>
                        <field name="has_project" invisible="1"/>
                        <field name="has_analytic" invisible="1"/>
                        <field name="has_product" invisible="1"/>
                        
                        <field name="has_rent_vechile" invisible="1"/>
                        <field name="has_travel" invisible="1"/>
                        <field name="has_hotel" invisible="1"/>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                    <group>
                        <group>
                            <field name="date_entry" />
                            <field name="partner_id" attrs="{'invisible':[('has_partner','==','no')], 'required': [('has_partner','==','required')]}" />
                        </group>
                        <group>
                            <field name="custom_entry_type_id" />
                            <field name="currency_id" />
                            <field name="company_id" />
                        </group>
                    </group>
                     <notebook>
                        <page string="Line" name="custom_entry_line">
                            <field name="custom_entry_line" widget="one2many_list">
                                <tree string="Custom Entry Line" editable="bottom">
                                    <field name="company_id" invisible="1" />
                                    <field name="currency_id" invisible="1" />
                                    <field name="product_uom_category_id" invisible="1" />
                                    
                                    
                                    <field name="project_id" attrs="{'column_invisible':[('parent.has_project','==','no')], 'required': [('parent.has_project','==','required')]}" options="{'no_create':True}" />
                                    <field name="analytic_account_id" attrs="{'column_invisible':[('parent.has_analytic','==','no')], 'required': [('parent.has_analytic','==','required')]}" options="{'no_create':True}" optional="hide"/>
                                    <field name="analytic_tag_ids" attrs="{'column_invisible':[('parent.has_analytic','==','no')], 'required': [('parent.has_analytic','==','required')]}" widget="many2many_tags" options="{'no_create':True,}" optional="hide"/>
                                    <field name="product_id" attrs="{'column_invisible':[('parent.has_product','==','no')], 'required': [('parent.has_product','==','required')]}"/>
                                    <field name="product_uom_id" attrs="{'column_invisible':[('parent.has_product','==','no')], 'required': [('parent.has_product','==','required')]}"/>
                                    <field name="product_qty" attrs="{'column_invisible':[('parent.has_product','==','no')], 'required': [('parent.has_product','==','required')]}"/>
                                    <field name="price_unit" attrs="{'column_invisible':[('parent.has_product','==','no')], 'required': [('parent.has_product','==','required')]}"/>
                                    <field name="price_subtotal" attrs="{'column_invisible':[('parent.has_product','==','no')], 'required': [('parent.has_product','==','required')]}"/>

                                    <field name="date_departure" attrs="{'column_invisible':[('parent.has_travel','==','no')], 'required': [('parent.has_travel','==','required')]}"/>
                                    <field name="date_arrival" attrs="{'column_invisible':[('parent.has_travel','==','no')], 'required': [('parent.has_travel','==','required')]}"/>
                                    <field name="travel_from" attrs="{'column_invisible':[('parent.has_travel','==','no')], 'required': [('parent.has_travel','==','required')]}"/>
                                    <field name="travel_to" attrs="{'column_invisible':[('parent.has_travel','==','no')], 'required': [('parent.has_travel','==','required')]}"/>
                                    <field name="travel_purpose" attrs="{'column_invisible':[('parent.has_travel','==','no')], 'required': [('parent.has_travel','==','required')]}"/>
                                    <field name="trave_ref" attrs="{'column_invisible':[('parent.has_travel','==','no')], 'required': [('parent.has_travel','==','required')]}"/>

                                    <field name="vehicle_no" attrs="{'column_invisible':[('parent.has_rent_vechile','==','no')], 'required': [('parent.has_rent_vechile','==','required')]}"/>
                                    <field name="driver_name" attrs="{'column_invisible':[('parent.has_rent_vechile','==','no')], 'required': [('parent.has_rent_vechile','==','required')]}"/>
                                    <field name="rent_days" attrs="{'column_invisible':[('parent.has_rent_vechile','==','no')], 'required': [('parent.has_rent_vechile','==','required')]}"/>


                                     <field name="date_in" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/>
                                    <field name="date_out" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/>
                                    <field name="hote_travel_purpose" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/>
                                    <field name="hotel_name" attrs="{'column_invisible':[('parent.has_hotel','==','no')], 'required': [('parent.has_hotel','==','required')]}"/>
                                    
                                    <field name='note' optional="show"/>

                                </tree>
                            </field>
                         </page>
                    </notebook>
                    </sheet>
                    <!-- Attachment preview -->
                    <div class="o_attachment_preview" />
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="action_custom_entry" model="ir.actions.act_window">
            <field name="name">Custom Journal Entry</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.custom.entry</field>
            <field name="view_mode">tree,kanban,form,activity</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new custom journal entry!
                </p>
            </field>
    </record>
        
    <menuitem action="action_custom_entry" name="Custom Entry" id="menu_custom_entry_type_config_custom_entry" groups="account.group_account_manager" parent="custom_entry_menu" sequence="2"/>
        
    </data>
</odoo>