<odoo>
  <data>
  <record id="view_purchase_order_form_down_payment" model="ir.ui.view">
        <field name="name">purchase.order.down.payment</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(de_purchase_bill.action_view_purchase_advance_payment_inv)d" string="Create Bill"
                        type="action" class="btn-primary" context="{'create_bill':True}"  attrs="{'invisible': ['|', ('state', 'not in', ('purchase', 'done')), ('invoice_status', 'in', ('no', 'invoiced'))]}"
                        />
                 <button name="%(de_purchase_bill.action_view_purchase_advance_payment_inv)d" string="Create Bill"
                        type="action" context="{'default_advance_payment_method': 'percentage'}"
                        attrs="{'invisible': ['|',('invoice_status', '!=', 'no'), ('state', '!=', 'purchase')]}"/>
                
                <!--
                

<button name="%(de_purchase_bill.action_view_purchase_advance_payment_inv)d" string="Create Bill"
                        type="action" class="oe_highlight" attrs="{'invisible': [('invoice_status', '!=', 'to invoice')]}"/>

                -->
            </xpath>
            <xpath expr="//notebook//field[@name='order_line']//tree" position="inside">
                <field name="is_downpayment"  invisible="1"/>
            </xpath>
            <xpath expr="//header//button[@name='action_create_invoice']" position="replace">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//header//button[@name='action_create_invoice'][1]" position="replace">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>
      
  </data>
</odoo>