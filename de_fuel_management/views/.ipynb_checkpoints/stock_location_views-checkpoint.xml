<odoo>
  <data>
    <record id="stock_location_form_view_refilling" model="ir.ui.view">
			<field name="name">stock.location.form.view</field>
			<field name="model">stock.location</field>
			<field name="inherit_id" ref="stock.view_location_form"/>
			<field name="arch" type="xml">
				<xpath expr="//group[1]" position="after">
                    <group>
                        <group>
                            <h3>Refilling</h3>
                            <field name="is_refilling"/>
                            <field name="location_type"  attrs="{'invisible':[('is_refilling','!=',True)]}" />
                            <field name="product_id"  attrs="{'invisible':[('is_refilling','!=',True)],'required':[('is_refilling','=',True)]}" />
                            <field name="storage_capacity"  attrs="{'invisible':[('is_refilling','!=',True)]}" />
                            <field name="uom_id"  attrs="{'invisible':[('is_refilling','!=',True)]}" />
                        </group>
                    </group>
				</xpath>
				
			</field>
		</record>
      
           <record id="action_view_stock_location" model="ir.actions.act_window">
                <field name="name">Fuel Refilling Location</field>
                <field name="res_model">stock.location</field>
                <field name="view_mode">tree,form</field>
                <field name="context">{"default_is_refilling":1}</field>
                <field name="domain">[('is_refilling','=',1 )]</field>
                <field name="help" type="html">
                  <p class="o_view_nocontent_smiling_face">
                    Add a new refilling location
                  </p>
                    <p>
                    Define your refilling points or tanks to refill. 
                    </p>
                   
                </field>
            </record>
      
      <menuitem
        id="menu_stock_refilling_points"
        name="Refilling Points"
        parent="menu_stock_refilling_config_root"
        sequence="1"
        action="action_view_stock_location"      
        />
      
  </data>
</odoo>