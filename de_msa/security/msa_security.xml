<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="module_category_msa" model="ir.module.category">
            <field name="name">Master Service Agreement</field>
            <field name="description">Helps you manage Maser Service Agreement</field>
            <field name="sequence">3</field>
        </record>
        
        <record id="group_msa_user" model="res.groups">
            <field name="name">MSA User</field>
            <field name="category_id" ref="module_category_msa"/>
			<field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        
        <record id="group_msa_manager" model="res.groups">
            <field name="name">MSA Manager</field>
            <field name="category_id" ref="module_category_msa"/>
            <field name="implied_ids" eval="[(4, ref('group_msa_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        
        <record id="msa_personal_rule" model="ir.rule">
            <field name="name">Personal MSA Agreements</field>
            <field ref="model_master_service_agreement" name="model_id"/>
            <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('group_msa_user'))]"/>
        </record>
        <record id="msa_see_all" model="ir.rule">
            <field name="name">All Orders</field>
            <field ref="model_master_service_agreement" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_msa_manager'))]"/>
        </record>

    </data>
</odoo>