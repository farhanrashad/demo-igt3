<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
      
      <record id="purchase_order_approver_list_view" model="ir.ui.view">
        <field name="name">purchase.order.approver.list.view</field>
        <field name="model">approval.approver</field>
        <field name="arch" type="xml">
            <tree string="Account Move Approvers" create="0" delete="0" multi_edit="0" >
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="job_title" />
                <field name="department_id" />
                <field name="status" />
                <field name="purchase_id" invisible="1" />
                <button name="action_view_request" type="object" string="Open Request" class="float-right btn-secondary"/>
            </tree>
        </field>
    </record>
      
    <record model="ir.actions.act_window" id="action_approval_approver_view_purchase_order">
        <field name="name">Approvers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">approval.approver</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="purchase_order_approver_list_view"/>
        <field name="domain">[('purchase_id','=',active_id)]</field>
        <field name="context">{
            "create": False,
            "default_purchase_id":active_id,
            }
        </field>
    </record>

  </data>
</odoo>