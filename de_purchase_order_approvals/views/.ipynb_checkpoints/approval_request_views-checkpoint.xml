<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Approval Request -->
        <record id="approval_request_view_form_inherit_purchase" model="ir.ui.view">
			<field name="name">approval.request.view.form.inherit.purchase</field>
			<field name="model">approval.request</field>
			<field name="inherit_id" ref="approvals.approval_request_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//group[1]/group[2]" position="inside">
                    <field name="purchase_id" attrs="{'invisible':[('purchase_id','=',False)]}"/>
				</xpath>
			</field>
		</record>
    </data>
</odoo>