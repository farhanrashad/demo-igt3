<odoo>
  <data>
    <record id="view_purchase_requisition_form_inherit_po_wizard" model="ir.ui.view">
        <field name="name">view.purchase.requisition.form.inehrit.po.wizard</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form" />
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="%(action_open_pr_to_po_wizard)d" type="action"
                    string="Create Purchase Order"
                    attrs="{'invisible': [('state', '=', 'confirm')]}"/>
                </xpath>
                
        </field>
    </record>
  </data>
</odoo>