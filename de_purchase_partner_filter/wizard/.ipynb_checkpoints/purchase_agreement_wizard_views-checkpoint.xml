<?xml version="1.0" encoding="utf-8"?>
<odoo>


<!-- FORM VIEW  -->

        <record id="purchase_agreement_wiard_form_view" model="ir.ui.view">
            <field name="name">purchase.agreement.wizard.form.view</field>
            <field name="model">purchase.requisition.wizard</field>
            <field name="arch" type="xml">
                <form string="Sale Order">
                    <p class="oe_grey"> </p>
                    <group>
                        <group>
                            <field name="partner_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'supplier', 'show_vat': True}" placeholder="Name, TIN, Email, or Reference" domain="[('id','=',partner_ids)]" options="{'no_create':True}"/>

                            <field name="partner_ids" widget="many2many_tags" invisible="1"/>
                        </group>
                        
                    </group>
         
                    <group>
                        <field name="wizard_line_ids" nolabel ="1">
                        <tree editable="botttom" create = 'false'>
                            <field name="product_id" />
                            <field name="name" invisible="1"/>
                            <field name="product_qty" />
                            <field name="product_uom" groups="uom.group_uom" class="oe_inline"/>
                            <field name="price_unit" />
                        </tree>
                        </field>
                    </group>
                   
                    <footer>
                        <button name="action_create_purchase_order" string="Create Purchase Order" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

<!-- ACTION     -->

        <record id="action_open_pr_to_po_wizard" model="ir.actions.act_window">
            <field name="name">Create Purchase Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.requisition.wizard</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</odoo>