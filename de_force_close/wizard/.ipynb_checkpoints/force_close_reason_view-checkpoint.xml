<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="view_force_close_form" model="ir.ui.view">
		<field name="name">force.close.wizard.form</field>
		<field name="model">force.close.wizard</field>
		<field name="arch" type="xml">
			<form string="Force Close Reason">
					<group>
						<field name="reason" />
					</group>
					<footer>
						<button name='action_force_close' string="Submit" type="object" class="btn-primary"/>
						<button string="Cancel" type="object" class="btn-secondary" special="cancel"/>
					</footer>
			</form>
		</field>
	</record>
		<record id="action_force_close_wizard_view" model="ir.actions.act_window">
		<field name="name">Force Close</field>
		<field name="res_model">force.close.wizard</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_force_close_form" />
		<field name="target">new</field>
	</record>
</odoo>

