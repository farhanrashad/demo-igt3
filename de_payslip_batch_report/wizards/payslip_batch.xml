<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_payslip_batch_wizard" model="ir.ui.view">
            <field name="name">pay.slip.batch.wizard</field>
            <field name="model">pay.slip.batch</field>
            <field name="arch" type="xml">
                <form string="Payblip Batch wizard">
                    <group>
                        <field name="contract_type"/>
                        <field name="doe"/>
                        <field name="debit_ac_no"/>
                        <field name="date_today" invisible="1" />
                        <field name="currency"/>
                        <field name="batch_id" invisible="1"/>
                    </group>
                   <footer>
                       <button name="print_report" type="object" string="Generate Payslip xls Report" class="oe_highlight"/>
                       <button name="print_txt_report" type="object" string="Generate Payslip TXT Report" class="oe_highlight"/>
                   </footer>
                </form>
            </field>
        </record>

        <record id="action_payslip_batch_wizard" model="ir.actions.act_window">
            <field name="name">Payslip Batch Data</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pay.slip.batch</field>
            <field name="view_id" ref="view_payslip_batch_wizard"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
